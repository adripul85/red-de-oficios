---
// Simulación de usuario logueado (como en tu captura)
const user = {
    name: "Lucas Adrian",
    avatar: "https://images.unsplash.com/photo-1599566150163-29194dcaad36?q=80&w=100&auto=format&fit=crop",
};
---

<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Oficios - Encuentra profesionales</title>
        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Inter:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <body class="bg-white font-sans text-slate-600 antialiased">
        <div
            class="md:hidden bg-[#FF5A5F] text-white px-4 py-3 flex justify-between items-center relative z-50"
        >
            <span class="text-sm font-bold flex-1 text-center pl-6"
                >DESCARGA LA APP</span
            >
            <button class="text-white/80 hover:text-white">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><line x1="18" y1="6" x2="6" y2="18"></line><line
                        x1="6"
                        y1="6"
                        x2="18"
                        y2="18"></line></svg
                >
            </button>
        </div>

        <header
            class="sticky top-0 z-40 bg-white shadow-sm md:shadow-none border-b border-gray-100 md:border-none"
        >
            <div
                class="max-w-7xl mx-auto px-4 h-16 flex items-center justify-between"
            >
                <button class="md:hidden p-2 -ml-2 text-slate-700">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="28"
                        height="28"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><line x1="3" y1="12" x2="21" y2="12"></line><line
                            x1="3"
                            y1="6"
                            x2="21"
                            y2="6"></line><line x1="3" y1="18" x2="21" y2="18"
                        ></line></svg
                    >
                </button>

                <div class="flex-1 md:flex-none text-center md:text-left">
                    <a
                        href="/"
                        class="text-2xl md:text-3xl text-[#FF5A5F] font-serif font-bold tracking-tight"
                    >
                        oficios<span class="text-slate-700">.net</span>
                    </a>
                </div>

                <nav
                    class="hidden md:flex gap-6 text-sm font-bold text-slate-500 uppercase tracking-wide mx-auto"
                >
                    <a href="#" class="hover:text-[#FF5A5F]">Mi Proyecto</a>
                    <a href="#" class="hover:text-[#FF5A5F]">Profesionales</a>
                    <a href="#" class="hover:text-[#FF5A5F]">Ideas</a>
                    <a href="#" class="hover:text-[#FF5A5F]">Comunidad</a>
                </nav>

                <div class="flex items-center gap-4">
                    <a
                        href="#"
                        class="hidden md:block text-sm font-bold text-[#FF5A5F]"
                        >ACCEDE</a
                    >
                    <button
                        class="rounded-full border-2 border-white shadow-sm overflow-hidden w-9 h-9"
                    >
                        <img
                            src={user.avatar}
                            alt="User"
                            class="w-full h-full object-cover"
                        />
                    </button>
                </div>
            </div>
        </header>

        <div class="relative w-full bg-white">
            <div
                class="relative w-full h-[280px] md:absolute md:top-0 md:right-0 md:w-[60%] md:h-[600px] z-0"
            >
                <img
                    src="https://images.unsplash.com/photo-1519741497674-611481863552?q=80&w=2070&auto=format&fit=crop"
                    alt="Boda fondo"
                    class="w-full h-full object-cover object-top md:object-center"
                />

                <div class="md:hidden absolute inset-0 bg-black/10"></div>

                <div
                    class="absolute bottom-4 right-4 bg-black/50 text-white text-[10px] px-2 py-1 rounded backdrop-blur-sm"
                >
                    Ivan Pujol Photography
                </div>
            </div>

            <div
                class="md:hidden absolute top-[240px] left-0 w-full z-10 overflow-hidden leading-[0]"
            >
                <svg
                    class="relative block w-[150%] h-[50px] -left-[25%]"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 1200 120"
                    preserveAspectRatio="none"
                >
                    <path
                        d="M0,120 L0,30 Q600,140 1200,30 L1200,120 Z"
                        fill="#ffffff"></path>
                </svg>
            </div>

            <div
                class="hidden md:block absolute top-0 right-[60%] w-[150px] h-[600px] z-10 text-white pointer-events-none translate-x-[1px]"
            >
                <svg
                    viewBox="0 0 100 100"
                    preserveAspectRatio="none"
                    class="w-full h-full fill-current"
                >
                    <path d="M0 0 L0 100 C80 50 80 50 0 0 Z"></path>
                    <path d="M0,0 H50 C120,30 120,70 50,100 H0 V0 Z"></path>
                </svg>
            </div>

            <div
                class="relative z-20 max-w-7xl mx-auto px-4 md:px-8 pb-10 pt-2 md:pt-32"
            >
                <div class="md:w-[45%]">
                    <h1
                        class="text-[28px] md:text-[52px] font-serif text-slate-800 text-center md:text-left leading-[1.1] mb-4 mt-4 md:mt-0"
                    >
                        Encuentra todo lo que necesitas para tu boda
                    </h1>

                    <p
                        class="text-center md:text-left text-slate-500 mb-8 text-lg"
                    >
                        ¡Tienes más de <span class="font-bold text-slate-700"
                            >62.000 proveedores</span
                        > para elegir!
                    </p>

                    <form
                        class="flex flex-col md:flex-row shadow-lg md:shadow-2xl shadow-slate-200 rounded md:rounded-lg overflow-hidden md:border border-slate-100 bg-white"
                    >
                        <div
                            class="relative flex-1 border border-slate-300 md:border-none rounded md:rounded-none mb-3 md:mb-0 mx-1 md:mx-0"
                        >
                            <div
                                class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    ><circle cx="11" cy="11" r="8"
                                    ></circle><line
                                        x1="21"
                                        y1="21"
                                        x2="16.65"
                                        y2="16.65"></line></svg
                                >
                            </div>
                            <input
                                type="text"
                                placeholder="¿Qué buscas?"
                                class="w-full pl-10 pr-4 py-3 md:py-4 outline-none text-slate-700 placeholder:text-slate-400"
                            />
                        </div>

                        <div class="hidden md:block w-[1px] bg-slate-100 my-2">
                        </div>

                        <div
                            class="relative flex-1 border border-slate-300 md:border-none rounded md:rounded-none mb-3 md:mb-0 mx-1 md:mx-0"
                        >
                            <div
                                class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    ><path
                                        d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                                    ></path><circle cx="12" cy="10" r="3"
                                    ></circle></svg
                                >
                            </div>
                            <input
                                type="text"
                                placeholder="Dónde"
                                class="w-full pl-10 pr-4 py-3 md:py-4 outline-none text-slate-700 placeholder:text-slate-400"
                            />
                        </div>

                        <button
                            class="bg-[#FF5A5F] hover:bg-[#ff4146] text-white font-bold py-3 px-8 rounded md:rounded-none mx-1 md:mx-0 transition-colors"
                        >
                            Buscar
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <section class="max-w-7xl mx-auto px-4 py-12">
            <div class="mb-8">
                <h2
                    class="text-2xl md:text-3xl font-serif font-bold text-slate-800"
                >
                    Todo sobre tu boda
                </h2>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="group cursor-pointer">
                    <div
                        class="h-48 rounded-xl overflow-hidden relative shadow-sm"
                    >
                        <img
                            src="https://images.unsplash.com/photo-1511795409834-ef04bbd61622?q=80&w=800"
                            alt="Proveedores"
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        />
                        <div
                            class="absolute bottom-0 w-full p-4 bg-gradient-to-t from-black/60 to-transparent text-white md:hidden"
                        >
                            <span class="font-bold">Proveedores</span>
                        </div>
                    </div>
                    <h3
                        class="mt-3 font-serif font-bold text-lg text-slate-800 hidden md:block"
                    >
                        Proveedores
                    </h3>
                    <p class="text-sm text-slate-500 hidden md:block">
                        Encuentra a los mejores profesionales de tu zona.
                    </p>
                </div>
                <div class="group cursor-pointer">
                    <div
                        class="h-48 rounded-xl overflow-hidden relative shadow-sm"
                    >
                        <img
                            src="https://images.unsplash.com/photo-1519225468359-2996515c9dc4?q=80&w=800"
                            alt="Espacios"
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                        />
                    </div>
                    <h3
                        class="mt-3 font-serif font-bold text-lg text-slate-800 hidden md:block"
                    >
                        Espacios de celebración
                    </h3>
                    <p class="text-sm text-slate-500 hidden md:block">
                        Fotos, opiniones y mucho más.
                    </p>
                </div>
            </div>
        </section>
    </body>
</html>

<style>
    /* Estilos globales rápidos para imitar la fuente si no cargan las imports */
    body {
        font-family: "Inter", sans-serif;
    }
    .font-serif {
        font-family: "DM Serif Display", serif;
    }
</style>
