---
import Layout from "../layouts/Layout.astro";
import { CATEGORIES } from "../data/categories";
import { LOCATIONS } from "../data/locations";
---

<Layout title="Pedir Presupuesto - DeOficios">
    <div class="max-w-2xl mx-auto px-4 py-10">
        <div
            class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-xl border border-gray-100 dark:border-gray-700 transition-colors"
        >
            <div class="text-center mb-8">
                <a
                    href="/mi-cuenta"
                    class="inline-flex items-center text-sm font-medium text-gray-500 dark:text-gray-400 hover:text-orange-600 mb-6 transition-colors"
                >
                    <svg
                        class="w-5 h-5 mr-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Volver a Mi Cuenta
                </a>
                <h1
                    class="text-3xl font-bold text-gray-900 dark:text-white mb-2"
                >
                    Â¡PedÃ­ presupuesto gratis! ðŸš€
                </h1>
                <p class="text-gray-500 dark:text-gray-400">
                    Contanos quÃ© necesitÃ¡s y avisaremos a los <span
                        class="text-orange-600 dark:text-orange-500 font-bold"
                        >mejores profesionales</span
                    > de tu zona.
                </p>
            </div>

            <form id="solicitud-form" class="space-y-5">
                <div>
                    <label
                        class="block font-bold text-gray-700 dark:text-gray-200 mb-1"
                        >Â¿QuÃ© servicio buscÃ¡s?</label
                    >
                    <select
                        id="rubro"
                        class="w-full p-3 border dark:border-gray-600 rounded-lg bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-orange-500 outline-none transition-colors"
                        required
                    >
                        <option value="" class="dark:bg-gray-800"
                            >Selecciona una categorÃ­a...</option
                        >
                        {
                            CATEGORIES.map((cat) => (
                                <optgroup
                                    label={cat.group}
                                    class="dark:bg-gray-800 font-bold"
                                >
                                    {cat.trades.map((t) => (
                                        <option
                                            value={t.name}
                                            class="dark:bg-gray-800"
                                        >
                                            {t.name}
                                        </option>
                                    ))}
                                </optgroup>
                            ))
                        }
                    </select>
                </div>

                <div>
                    <label
                        class="block font-bold text-gray-700 dark:text-gray-200 mb-1"
                        >Â¿En quÃ© barrio?</label
                    >
                    <select
                        id="zona"
                        class="w-full p-3 border dark:border-gray-600 rounded-lg bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-orange-500 outline-none transition-colors"
                        required
                    >
                        <option value="" class="dark:bg-gray-800"
                            >Selecciona tu zona...</option
                        >
                        {
                            LOCATIONS.map((l) => (
                                <optgroup
                                    label={l.group}
                                    class="dark:bg-gray-800 font-bold"
                                >
                                    {l.zones.map((z) => (
                                        <option
                                            value={z}
                                            class="dark:bg-gray-800"
                                        >
                                            {z}
                                        </option>
                                    ))}
                                </optgroup>
                            ))
                        }
                    </select>
                </div>

                <div>
                    <label
                        class="block font-bold text-gray-700 dark:text-gray-200 mb-1"
                        >Tu WhatsApp (para que te contacten)</label
                    >
                    <div class="flex">
                        <span
                            class="inline-flex items-center px-4 rounded-l-lg border border-r-0 border-gray-300 dark:border-gray-600 bg-gray-100 dark:bg-gray-600 text-gray-600 dark:text-gray-300 font-bold text-sm"
                        >
                            +54 9
                        </span>
                        <input
                            type="tel"
                            id="telefono"
                            class="w-full p-3 border rounded-r-lg dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-orange-500 outline-none transition-colors"
                            placeholder="11 1234 5678"
                            pattern="[0-9\s]+"
                            required
                        />
                    </div>
                </div>

                <div>
                    <label
                        class="block font-bold text-gray-700 dark:text-gray-200 mb-1"
                        >Detalles del trabajo</label
                    >
                    <textarea
                        id="detalle"
                        rows="4"
                        class="w-full p-3 border dark:border-gray-600 rounded-lg bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-orange-500 outline-none transition-colors"
                        placeholder="Ej: Necesito pintar un living de 4x4, paredes y techo..."
                        required></textarea>
                </div>

                <!-- Campo de presupuesto opcional -->
                <div>
                    <label
                        class="block font-bold text-gray-700 dark:text-gray-200 mb-1"
                    >
                        Mi presupuesto estimado es de... <span
                            class="text-gray-400 font-normal text-sm dark:text-gray-500"
                            >(opcional)</span
                        >
                    </label>
                    <div class="flex">
                        <span
                            class="inline-flex items-center px-3 rounded-l-lg border border-r-0 border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-600 text-gray-500 dark:text-gray-300"
                        >
                            $
                        </span>
                        <input
                            type="text"
                            id="presupuesto"
                            class="w-full p-3 border rounded-r-lg dark:border-gray-600 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-orange-500 outline-none transition-colors"
                            placeholder="Ej: 50.000"
                        />
                    </div>
                </div>

                <div
                    class="flex items-center gap-3 p-4 bg-orange-50 dark:bg-orange-900/20 rounded-lg border border-orange-100 dark:border-orange-900/30"
                >
                    <input
                        type="checkbox"
                        id="urgente"
                        class="w-5 h-5 text-orange-600 accent-orange-600"
                    />
                    <label
                        for="urgente"
                        class="font-bold text-orange-800 dark:text-orange-300 cursor-pointer"
                        >Â¡Es una urgencia! (Servicio 24hs)</label
                    >
                </div>

                <button
                    type="submit"
                    id="btn-enviar"
                    class="w-full bg-gradient-to-r from-orange-500 to-red-600 text-white font-bold py-4 rounded-xl shadow-lg transform transition hover:scale-[1.02]"
                >
                    Enviar Solicitud a Expertos ðŸ“¨
                </button>
            </form>
        </div>
    </div>

    <!-- Modal de Ã‰xito -->
    <div
        id="success-modal"
        class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-sm"
    >
        <div
            class="bg-white dark:bg-gray-800 rounded-3xl p-8 max-w-md mx-4 shadow-2xl transform transition-all scale-95 opacity-0 border dark:border-gray-700"
            id="modal-content"
        >
            <!-- Checkmark animado -->
            <div class="flex justify-center mb-6">
                <div
                    class="w-20 h-20 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center"
                >
                    <svg
                        class="w-12 h-12 text-green-600 dark:text-green-500"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="3"
                            d="M5 13l4 4L19 7"></path>
                    </svg>
                </div>
            </div>

            <!-- TÃ­tulo -->
            <h2
                class="text-2xl font-bold text-gray-900 dark:text-white text-center mb-3"
            >
                Â¡Solicitud Enviada! ðŸŽ‰
            </h2>

            <!-- Mensaje -->
            <p
                class="text-gray-600 dark:text-gray-400 text-center mb-6"
                id="modal-message"
            >
                Hemos notificado a los mejores profesionales de tu zona.
            </p>

            <!-- Contador de profesionales -->
            <div
                class="bg-orange-50 dark:bg-orange-900/20 rounded-2xl p-4 mb-6 border border-orange-100 dark:border-orange-900/30"
            >
                <div class="flex items-center justify-center gap-3">
                    <svg
                        class="w-6 h-6 text-orange-600 dark:text-orange-500"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                    >
                        <path
                            d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"
                        ></path>
                    </svg>
                    <span class="font-bold text-gray-900 dark:text-white"
                        ><span id="pros-count">0</span> profesionales notificados</span
                    >
                </div>
            </div>

            <!-- Botones -->
            <div class="flex gap-3">
                <button
                    id="btn-close-modal"
                    class="flex-1 py-3 px-4 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-200 font-semibold rounded-xl transition-all"
                >
                    Cerrar
                </button>
                <a
                    href="/mi-cuenta"
                    class="flex-1 py-3 px-4 bg-gradient-to-r from-orange-500 to-red-600 hover:from-orange-600 hover:to-red-700 text-white font-bold rounded-xl transition-all text-center"
                >
                    Ver Mi Cuenta
                </a>
            </div>
        </div>
    </div>
</Layout>

<script>
    import { db, auth } from "../firebase/client";
    import { onAuthStateChanged } from "firebase/auth";
    import { doc, getDoc } from "firebase/firestore";

    // Wrap everything in astro:page-load for View Transitions compatibility
    document.addEventListener("astro:page-load", () => {
        console.log("ðŸš€ [SOLICITAR] PÃ¡gina cargada/navegada");

        let currentUser: any = null;
        let userDisplayName = "";

        onAuthStateChanged(auth, async (user) => {
            if (user) {
                currentUser = user;
                // Intentar obtener el nombre del documento de cliente si no hay displayName
                try {
                    const clientDoc = await getDoc(
                        doc(db, "clientes", user.uid),
                    );
                    if (clientDoc.exists()) {
                        userDisplayName =
                            clientDoc.data().nombre ||
                            user.displayName ||
                            "Usuario";
                    } else {
                        userDisplayName = user.displayName || "Usuario";
                    }
                } catch (e) {
                    userDisplayName = user.displayName || "Usuario";
                }
            } else {
                // Redirigir si no estÃ¡ logueado
                window.location.href = "/ingresar-cliente?redirect=/solicitar";
            }
        });

        const form = document.getElementById("solicitud-form");
        const btn = document.getElementById("btn-enviar") as HTMLButtonElement;

        form?.addEventListener("submit", async (e) => {
            e.preventDefault();
            if (!currentUser)
                return alert(
                    "Por favor, inicia sesiÃ³n como cliente para pedir presupuestos.",
                );

            if (!userDisplayName && currentUser) {
                userDisplayName = currentUser.displayName || "Usuario";
            }

            if (btn) {
                btn.disabled = true;
                btn.innerText = "Buscando profesionales...";
            }

            const rubro = (
                document.getElementById("rubro") as HTMLSelectElement
            ).value;
            const zona = (document.getElementById("zona") as HTMLSelectElement)
                .value;
            const telefonoInput = (
                document.getElementById("telefono") as HTMLInputElement
            ).value;
            const presupuesto = (
                document.getElementById("presupuesto") as HTMLInputElement
            ).value;

            // Limpiar telÃ©fono para guardarlo limpio (solo nÃºmeros)
            const telefono = telefonoInput.replace(/[^0-9]/g, "");

            const detalle = (
                document.getElementById("detalle") as HTMLTextAreaElement
            ).value;
            const urgente = (
                document.getElementById("urgente") as HTMLInputElement
            ).checked;

            try {
                const response = await fetch("/api/crear-solicitud", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                        clienteId: currentUser.uid,
                        clienteNombre: userDisplayName,
                        clienteEmail: currentUser.email, // Send email to API
                        clienteAvatar: currentUser.photoURL || "",
                        rubro,
                        zona,
                        telefono,
                        presupuesto,
                        detalle,
                        urgente,
                    }),
                });

                const data = await response.json();

                if (!response.ok) {
                    console.error("âŒ [API ERROR DATA]:", data);
                    throw new Error(data.error || "Error al crear solicitud");
                }

                // MOSTRAR MODAL DE Ã‰XITO
                const modal = document.getElementById("success-modal");
                const modalContent = document.getElementById("modal-content");
                const prosCountEl = document.getElementById("pros-count");

                if (prosCountEl)
                    prosCountEl.innerText = data.candidatosCount || 0;
                if (modal) modal.classList.remove("hidden");

                // AnimaciÃ³n de entrada
                setTimeout(() => {
                    if (modalContent) {
                        modalContent.classList.remove("scale-95", "opacity-0");
                        modalContent.classList.add("scale-100", "opacity-100");
                    }
                }, 10);

                // Configurar cierre del modal
                const closeBtn = document.getElementById("btn-close-modal");
                if (closeBtn) {
                    closeBtn.onclick = () => {
                        window.location.href = "/mi-cuenta";
                    };
                }

                if (btn) {
                    btn.disabled = false;
                    btn.innerText = "Solicitud Enviada âœ…";
                }
            } catch (error: any) {
                console.error(error);
                alert(error.message || "Hubo un error. Intenta nuevamente.");
                if (btn) {
                    btn.disabled = false;
                    btn.innerText = "Enviar Solicitud a Expertos ðŸ“¨";
                }
            }
        });
    }); // End of astro:page-load
</script>
