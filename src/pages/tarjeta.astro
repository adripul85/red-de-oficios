---
import { db } from "../firebase/client";
import { doc, getDoc } from "firebase/firestore";

const id = Astro.url.searchParams.get("id");
let profesional = null;

if (id) {
    try {
        const docRef = doc(db, "profesionales", id);
        const docSnap = await getDoc(docRef);
        if (docSnap.exists()) {
            profesional = docSnap.data();
        }
    } catch (e) {
        console.error("Error:", e);
    }
}

if (!profesional) {
    return Astro.redirect("/");
}

// Data Mapping
const name = profesional.nombre || "Profesional";
const role =
    profesional.seo_profesion || profesional.rubro_principal || "Profesional";
const avatar =
    profesional.foto ||
    `https://ui-avatars.com/api/?name=${name}&background=random`;
const location =
    profesional.zona ||
    profesional.ubicacion_exacta?.direccion_texto ||
    "Argentina";
const rating = (profesional.promedio || 0).toFixed(1);
const reviewsCount = profesional.total_votos || 0;
const experience = profesional.experiencia || "Varios años";
// Stats defaults
const jobsCount = "100+"; // Placeholder or real data if available
const responseTime = "< 2hs"; // Placeholder
const warranty = profesional.garantia?.ofrece
    ? profesional.garantia.tiempo
        ? `${profesional.garantia.tiempo} días`
        : "Escrita"
    : "Consultar";
const whatsappUrl = `https://wa.me/549${profesional.telefono}?text=Hola, vi tu tarjeta digital y quería hacerte una consulta.`;
const profileUrl = `${Astro.url.origin}/perfil?id=${id}`;
const phone = profesional.telefono || "";

// Star Logic
const numRating = parseFloat(rating);
