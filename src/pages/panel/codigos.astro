---
import { auth, db } from "../../firebase/client";
import Sidebar from "../../components/panel/Sidebar.astro";
import MobileSidebar from "../../components/panel/MobileSidebar.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Mis C√≥digos - DeOficios Pro" hideHeader={true} hideIA={true} hideBottomNav={true}>
    <div class="flex h-screen overflow-hidden">
        <Sidebar currentPath={Astro.url.pathname} />
        <MobileSidebar currentPath={Astro.url.pathname} />

        <main class="flex-1 flex flex-col h-screen relative overflow-hidden bg-slate-50">
            <header class="h-16 bg-white border-b border-slate-200 flex items-center justify-between px-6 z-30 relative shrink-0">
                <div class="flex items-center gap-4">
                    <button id="open-sidebar" class="md:hidden text-2xl mr-2">‚ò∞</button>
                    <h2 class="text-lg font-bold text-slate-800">Mis C√≥digos de Seguridad</h2>
                </div>
            </header>

            <div class="flex-1 overflow-y-auto">
                <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
                    <div class="mb-8">
                        <h1 class="text-2xl font-bold text-slate-900">C√≥digos Activos</h1>
                        <p class="text-slate-500 mt-1">
                            Utiliza estos c√≥digos para verificar la identidad de los clientes al llegar al domicilio.
                        </p>
                    </div>

                    <div id="loading" class="text-center py-12">
                        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-orange-600 mx-auto"></div>
                        <p class="text-slate-400 mt-4">Buscando tus c√≥digos...</p>
                    </div>

                    <div id="empty-state" class="hidden text-center py-12 bg-white rounded-2xl border border-dashed border-slate-300">
                        <div class="mx-auto h-12 w-12 text-slate-300 mb-4">üõ°Ô∏è</div>
                        <h3 class="mt-2 text-sm font-medium text-slate-900">Sin c√≥digos activos</h3>
                        <p class="mt-1 text-sm text-slate-500">Los c√≥digos aparecer√°n aqu√≠ cuando contactes a un cliente o acepten un presupuesto.</p>
                    </div>

                    <div id="codigos-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <!-- Codigos injected here -->
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        import { auth, db } from "../../firebase/client";
        import { onAuthStateChanged } from "firebase/auth";
        import { collection, query, where, onSnapshot, getDocs, collectionGroup, orderBy, limit } from "firebase/firestore";

        let currentUser = null;

        onAuthStateChanged(auth, (user) => {
            if (user) {
                currentUser = user;
                loadCodigos();
            } else {
                window.location.href = "/ingresar-profesional";
            }
        });

        async function loadCodigos() {
            const grid = document.getElementById("codigos-grid");
            const loading = document.getElementById("loading");
            const emptyState = document.getElementById("empty-state");

            if (!grid || !currentUser) return;

            // Listeners for 'contactos' and professional's 'codigos' subcollection
            const qContactos = query(collection(db, "contactos"), where("proId", "==", currentUser.uid), limit(20));
            const qPresupuestos = query(collection(db, "profesionales", currentUser.uid, "codigos"), limit(20));

            const allCodes = new Map();

            const render = () => {
                const items = Array.from(allCodes.values()).sort((a: any, b: any) => b.fecha - a.fecha);
                
                if (items.length === 0) {
                    loading?.classList.add("hidden");
                    emptyState?.classList.remove("hidden");
                    grid.innerHTML = "";
                    return;
                }

                loading?.classList.add("hidden");
                emptyState?.classList.add("hidden");

                grid.innerHTML = items.map(item => `
                    <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 hover:shadow-md transition-shadow">
                        <div class="flex justify-between items-start mb-4">
                            <div class="p-2 bg-slate-50 rounded-lg text-xl">${item.tipo === 'contacto' ? 'üí¨' : 'üìù'}</div>
                            <span class="text-[10px] font-bold uppercase tracking-widest text-slate-400">${item.fecha.toLocaleDateString()}</span>
                        </div>
                        <h3 class="font-bold text-slate-900 mb-1">${item.clienteNombre}</h3>
                        <p class="text-xs text-slate-500 mb-4 uppercase font-bold tracking-tight">${item.rubro}</p>
                        
                        <div class="bg-slate-900 text-white p-4 rounded-xl text-center relative overflow-hidden group">
                            <div class="absolute inset-0 bg-gradient-to-r from-orange-600/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
                            <span class="text-[10px] block uppercase tracking-[0.2em] mb-1 font-black text-orange-500">C√≥d. Seguridad</span>
                            <span class="text-3xl font-black tracking-widest font-mono">${item.codigo}</span>
                        </div>
                    </div>
                `).join("");
            };

            // Listener 1: Contactos (WhatsApp)
            onSnapshot(qContactos, (snap) => {
                snap.docs.forEach(doc => {
                    const data = doc.data();
                    if (data.token) {
                        allCodes.set('c_' + doc.id, {
                            id: doc.id,
                            tipo: 'contacto',
                            clienteNombre: data.clienteNombre || 'Cliente',
                            rubro: data.rubro || 'WhatsApp',
                            codigo: data.token,
                            fecha: data.fecha?.toDate() || new Date()
                        });
                    }
                });
                render();
            });

            // Listener 2: Presupuestos Aceptados
            onSnapshot(qPresupuestos, (snap) => {
                snap.docs.forEach(doc => {
                    const data = doc.data();
                    allCodes.set('p_' + doc.id, {
                        id: doc.id,
                        tipo: 'presupuesto',
                        clienteNombre: data.clienteNombre || 'Cliente',
                        rubro: data.rubro || 'Presupuesto',
                        codigo: data.codigo,
                        fecha: data.fecha?.toDate() || new Date()
                    });
                });
                render();
            });
        }
    </script>
</Layout>
