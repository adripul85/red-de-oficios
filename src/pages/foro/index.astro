];

const forumStructure = [
    {
        title: "üè† El Consultorio (P√∫blico)",
        type: "public",
        categories: [
            { id: "dudas", name: "Dudas R√°pidas", icon: "‚ùì" },
            { id: "presupuestos", name: "Solicitar Presupuesto", icon: "üí∞" },
