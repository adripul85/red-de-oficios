---
import Layout from "../../layouts/Layout.astro";
import { db } from "../../firebase/client";
import { doc, getDoc } from "firebase/firestore";

// ID del thread de reglas en Firebase
const RULES_THREAD_ID = "PWAHsQeX9mEPu7MKjmC4";

// Cargar thread de reglas desde Firebase
let thread = null;
let loading = true;
let error = null;

try {
    const docRef = doc(db, "foro_threads", RULES_THREAD_ID);
    const snap = await getDoc(docRef);
    
    if (snap.exists()) {
        const data = snap.data();
        thread = {
            id: snap.id,
            title: data.title || "Reglas de la Comunidad",
            content: data.content || "",
            authorName: data.authorName || "Administracin",
            authorPhoto: data.authorPhoto || "https://ui-avatars.com/api/?name=Admin&background=FF5A5F&color=fff",
            createdAt: data.createdAt ? data.createdAt.toDate().toLocaleDateString() : "2024",
        };
    } else {
        error = "No se encontraron las reglas de la comunidad";
    }
    loading = false;
} catch (e) {
    console.error("Error cargando reglas:", e);
    error = "Error al cargar las reglas";
    loading = false;
}
---

<Layout title="Reglas de la Comunidad - DeOficios">
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
        href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Inter:wght@400;500;600;700&display=swap"
        rel="stylesheet"
    />

    <div class="bg-[#F8F9FA] min-h-screen font-sans">
        <!-- Hero Section -->
        <section class="bg-gradient-to-br from-slate-800 to-slate-900 text-white py-16 px-4">
            <div class="max-w-4xl mx-auto">
                <a
                    href="/foro"
                    class="inline-flex items-center gap-2 text-slate-300 hover:text-white mb-6 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                    Volver al foro
                </a>
                
                <div class="flex items-center gap-4 mb-4">
                    <div class="w-16 h-16 bg-[#FF5A5F] rounded-2xl flex items-center justify-center text-3xl shadow-xl">
                        
                    </div>
                    <div>
                        <h1 class="text-4xl md:text-5xl font-serif font-bold">
                            Reglas de la Comunidad
                        </h1>
                        <p class="text-slate-300 mt-2">
                            Normas para mantener un ambiente respetuoso y profesional
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <div class="max-w-4xl mx-auto px-4 py-10">
            {loading && (
                <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-12 text-center">
                    <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-[#FF5A5F] mx-auto"></div>
                    <p class="text-slate-500 mt-4">Cargando reglas...</p>
                </div>
            )}

            {error && (
                <div class="bg-red-50 border border-red-200 rounded-2xl p-8 text-center">
                    <div class="text-5xl mb-4"></div>
                    <h3 class="text-xl font-bold text-red-800 mb-2">Error</h3>
                    <p class="text-red-600">{error}</p>
                </div>
            )}

            {thread && !loading && !error && (
                <article class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
                    <!-- Autor y fecha -->
                    <div class="bg-slate-50 border-b border-slate-200 px-8 py-6">
                        <div class="flex items-center gap-4">
                            <img
                                src={thread.authorPhoto}
                                alt={thread.authorName}
                                class="w-14 h-14 rounded-full border-2 border-white shadow-md"
                            />
                            <div>
                                <p class="font-bold text-slate-800 text-lg">{thread.authorName}</p>
                                <p class="text-sm text-slate-500">Publicado el {thread.createdAt}</p>
                            </div>
                        </div>
                    </div>

                    <!-- Contenido principal -->
                    <div class="px-8 py-10">
                        <div class="prose prose-slate max-w-none">
                            <div set:html={thread.content.replace(/\n/g, '<br>')} class="text-slate-700 leading-relaxed text-base"></div>
                        </div>
                    </div>

                    <!-- Call to action -->
                    <div class="bg-blue-50 border-t border-blue-100 px-8 py-6">
                        <div class="flex items-start gap-4">
                            <div class="text-3xl"></div>
                            <div class="flex-1">
                                <h3 class="font-bold text-blue-900 mb-2">Listo para participar?</h3>
                                <p class="text-blue-700 text-sm mb-4">
                                    Asegrate de seguir estas reglas al publicar debates y responder a otros miembros.
                                </p>
                                <a
                                    href="/foro/crear-debate"
                                    class="inline-block bg-[#FF5A5F] hover:bg-[#ff4146] text-white font-bold px-6 py-3 rounded-xl transition-colors shadow-sm">
                                    Iniciar un debate
                                </a>
                            </div>
                        </div>
                    </div>
                </article>
            )}

            <!-- Seccin de consejos -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-10">
                <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                    <div class="text-3xl mb-3"></div>
                    <h3 class="font-bold text-slate-800 mb-2">Respeto mutuo</h3>
                    <p class="text-sm text-slate-600">
                        Trata a todos con cortesa, independientemente de su nivel de experiencia.
                    </p>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                    <div class="text-3xl mb-3"></div>
                    <h3 class="font-bold text-slate-800 mb-2">Contenido til</h3>
                    <p class="text-sm text-slate-600">
                        Comparte informacin relevante y verifica tus fuentes antes de publicar.
                    </p>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                    <div class="text-3xl mb-3"></div>
                    <h3 class="font-bold text-slate-800 mb-2">Reporta abusos</h3>
                    <p class="text-sm text-slate-600">
                        Si ves contenido inapropiado, reprtalo al equipo de moderacin.
                    </p>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    :global(body) {
        font-family: "Inter", sans-serif;
    }

    :global(.font-serif) {
        font-family: "DM Serif Display", serif;
    }

    /* Estilos para el contenido del thread */
    .prose {
        color: #334155;
    }

    .prose strong {
        color: #0f172a;
        font-weight: 700;
    }

    .prose a {
        color: #FF5A5F;
        text-decoration: underline;
    }

    .prose a:hover {
        color: #ff4146;
    }
</style>

