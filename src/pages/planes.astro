<script>
  import { auth } from "../firebase/client";

  const botonesPago = document.querySelectorAll(".btn-pay");

  botonesPago.forEach((btn) => {
    btn.addEventListener("click", async (e) => {
      e.preventDefault();

      const user = auth.currentUser;
      if (!user) {
        alert("âš ï¸ Debes iniciar sesiÃ³n o registrarte para contratar un plan.");
        window.location.href = "/ingresar";
        return;
      }

      const boton = e.currentTarget as HTMLElement;
      const textoOriginal = boton.innerText;

      boton.innerText = "Procesando...";
      boton.style.opacity = "0.7";
      boton.style.pointerEvents = "none";

      try {
        const title = boton.getAttribute("data-title");
        const price = boton.getAttribute("data-price");
        const id = boton.getAttribute("data-id");

        const response = await fetch("/api/crear-pago", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            title,
            price,
            id,
            userId: user.uid,
          }),
        });

        const data = await response.json();

        if (data.init_point) {
          window.location.href = data.init_point;
        } else {
          console.error("Error backend:", data);
          alert("Error al generar el link de pago. Revisa la consola.");
          restaurarBoton(boton, textoOriginal);
        }
      } catch (error) {
        console.error(error);
        alert("OcurriÃ³ un error de conexiÃ³n.");
        restaurarBoton(boton, textoOriginal);
      }
    });
  });

  function restaurarBoton(btn: HTMLElement, texto: string) {
    btn.innerText = texto;
    btn.style.opacity = "1";
    btn.style.pointerEvents = "auto";
  }
</script>
