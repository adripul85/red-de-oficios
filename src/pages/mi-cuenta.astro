                const { collection, query, where, onSnapshot } = await import("firebase/firestore");
                const q = query(
                    collection(db, "clientes", userId, "notificaciones"),
                    where("leida", "==", false)
                );

                unsubNotifs = onSnapshot(q, (snap) => {
                    const counts = new Map();
                    snap.docs.forEach(d => {
                        const solId = d.data().solicitudId;
                        if (solId) {
                            counts.set(solId, (counts.get(solId) || 0) + 1);
                        }
