<script>
  function setupSearchLogger() {
    const form = document.getElementById("hero-search-form");
    const input = document.getElementById("input-servicio") as HTMLInputElement;

    if (form && input) {
      form.addEventListener("submit", () => {
        const term = input.value;
        // Enviamos el dato al backend sin detener el formulario (Fire & Forget)
        // Usamos navigator.sendBeacon si est disponible para asegurar el envo aunque cambie la pgina
        if (term.length > 2) {
          const data = JSON.stringify({ term });
          if (navigator.sendBeacon) {
            const blob = new Blob([data], { type: "application/json" });
            navigator.sendBeacon("/api/log-search", blob);
          } else {
            // Fallback para navegadores viejos
            fetch("/api/log-search", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: data,
              keepalive: true,
            });
          }
        }
      });
    }
  }

  document.addEventListener("astro:page-load", setupSearchLogger);
</script>

