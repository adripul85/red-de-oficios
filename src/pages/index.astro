---
import Layout from "../layouts/Layout.astro";
import CategoryQuickLinks from "../components/home/CategoryQuickLinks.astro";
import HeroSearch from "../components/home/HeroSearch.astro";
import { db } from "../firebase/client";
import {
  collection,
  getDocs,
  query,
  where,
  limit,
  orderBy,
} from "firebase/firestore";
import {
  Search,
  ShieldCheck,
  MessageCircle,
  Star,
  MapPin,
  Map as MapIcon,
  Briefcase,
} from "lucide-astro";

// 1. TRAER SOLO LOS DESTACADOS (PREMIUM)
// 1. DEFINICIONES DE CONSULTAS (Queries)
// Destacados (Premium)
const qDestacados = query(
  collection(db, "profesionales"),
  where("plan", "in", ["experto", "semestral", "impulso", "mensual"]),
  limit(20),
);

// Top Rated (Podio)
const qTop = query(
  collection(db, "profesionales"),
  orderBy("promedio", "desc"),
  orderBy("total_votos", "desc"),
  limit(10),
);

// Trends (Bsquedas)
const qTrends = query(
  collection(db, "search_trends"),
  orderBy("count", "desc"),
  limit(4),
);

// 2. EJECUCIN PARALELA (Optimizacin clave)
const [snapDest, snapTop, snapTrends] = await Promise.all([
  getDocs(qDestacados).catch((e) => {
    console.warn("Error Destacados", e);
    return { docs: [] };
  }),
  getDocs(qTop).catch((e) => {
    console.warn("Error TopRated", e);
    return { docs: [] };
  }), // Fail-safe
  getDocs(qTrends).catch((e) => {
    console.warn("Error Trends", e);
    return { docs: [] };
  }), // Fail-safe
]);

// 3. PROCESAMIENTO DE DATOS

// --- Destacados ---
let destacados = snapDest.docs.map((doc) => ({ id: doc.id, ...doc.data() }));
// Ordenar manualmente: Experto > Impulso
destacados.sort((a: any, b: any) => {
  const weightA = a.plan === "experto" || a.plan === "semestral" ? 2 : 1;
  const weightB = b.plan === "experto" || b.plan === "semestral" ? 2 : 1;
  return weightB - weightA;
});
destacados = destacados.slice(0, 4);

// --- Top Rated ---
let topRated = snapTop.docs
  .map((doc) => ({ id: doc.id, ...doc.data() }))
  .filter((p: any) => p.promedio > 0)
  .slice(0, 4);

// --- Trends ---
let trendingTags = snapTrends.docs.map((doc) => ({
  term: doc.data().term_display || doc.id,
  link: doc.id,
}));

// Fallback Trends si falla o vaco
if (trendingTags.length === 0) {
  trendingTags = [
    { term: "Gasista", link: "gasista" },
    { term: "Electricista", link: "electricista" },
    { term: "Albail", link: "albail" },
  ];
}
