<style>
  .error-container {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f3f4f6;
    text-align: center;
    padding: 20px;
    font-family: 'Segoe UI', system-ui, sans-serif;
  }

  .content-box {
    background: white;
    padding: 50px;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.08);
    max-width: 500px;
    width: 100%;
    border: 1px solid #e5e7eb;
  }

  .icon-animation {
    font-size: 5rem;
    margin-bottom: 10px;
    animation: bounce 2s infinite;
  }

  h1 {
    font-size: 4rem;
    margin: 0;
    color: #1f2937;
    line-height: 1;
    font-weight: 900;
  }

  h2 {
    color: #ea580c;
    margin: 10px 0 20px;
    font-size: 1.5rem;
  }

  p {
    color: #6b7280;
    margin-bottom: 30px;
    line-height: 1.6;
    font-size: 1.1rem;
  }

  .actions {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .btn-primary {
    background: #1f2937;
    color: white;
    text-decoration: none;
    padding: 12px 20px;
    border-radius: 8px;
    font-weight: bold;
    transition: 0.2s;
  }
  .btn-primary:hover {
    background: #000;
    transform: translateY(-2px);
  }

  .btn-outline {
    border: 2px solid #e5e7eb;
    color: #4b5563;
    text-decoration: none;
    padding: 12px 20px;
    border-radius: 8px;
    font-weight: bold;
    transition: 0.2s;
  }
  .btn-outline:hover {
    border-color: #ea580c;
    color: #ea580c;
    background: #fff7ed;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {transform: translateY(0);}
    40% {transform: translateY(-20px);}
    60% {transform: translateY(-10px);}
  }

  @media (min-width: 600px) {
    .actions {
      flex-direction: row;
      justify-content: center;
    }
  }
</style>