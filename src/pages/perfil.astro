                        </aside>
                    </div>
                </main>
                
                <ProfileLightbox client:load images={profesional.portfolio || []} />
                
                <ProfileBudgetModal
                    client:load
                    services={profesional.servicios_lista}
                    proName={profesional.nombre}
                    proRubro={profesional.rubro_principal}
                    proTel={profesional.telefono}
                    proMat={profesional.matricula}
                />
            </div>
        )
    }

    <ProfileLightbox client:load portfolio={profesional.portfolio} />

