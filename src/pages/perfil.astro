import Layout from "../layouts/Layout.astro";
import { db } from "../firebase/client";
import { doc, getDoc, updateDoc, increment } from "firebase/firestore";

import ModernProfileCard from "../components/ModernProfileCard.astro";
import ProfileLightbox from "../components/profile/ProfileLightbox.jsx";
import ProfileBudgetModal from "../components/profile/ProfileBudgetModal.jsx";
import ProfileReviews from "../components/profile/ProfileReviews.jsx";


const id = Astro.url.searchParams.get("id");
let profesional = null;
let idProfesional = null;

if (id) {
    try {
        const docRef = doc(db, "profesionales", id);
        const docSnap = await getDoc(docRef);
        if (docSnap.exists()) {
            profesional = docSnap.data();
            idProfesional = docSnap.id;
        }
    } catch (e) {
        console.error("Error:", e);
    }
}

if (!profesional) return Astro.redirect("/");

// SI TIENE SLUG Y MODO LANDING ACTIVADO, REDIRECCIONAR A LA URL LIMPIA
if (profesional.slug && profesional.web_propia) {
    return Astro.redirect(`/${profesional.slug}`);
}


// --- LÓGICA DE VISUALIZACIÓN ---

const esExperto =
    profesional.plan === "experto" || profesional.plan === "semestral";
const mostrarComoLanding = esExperto && profesional.web_propia;
const promedio = profesional.puntuacion || profesional.promedio || 0;
const votos = profesional.total_valoraciones || profesional.total_votos || 0;
const ubicacion = profesional.zona || "Argentina";

const portfolioJson = JSON.stringify(profesional.portfolio || []);
const serviciosJson = JSON.stringify(profesional.servicios_lista || []);
const profesionalJson = JSON.stringify(profesional);


const seoTitle = profesional.seo_nombre || `${profesional.nombre} | DeOficios`;
const seoDescription =
    profesional.seo_profesion ||
    `Contacta a ${profesional.nombre}, ${profesional.rubro_principal} en ${ubicacion}. Ver perfil, fotos y opiniones.`;
const serviceIcons: Record<string, string> = {
    "Aire Acondicionado": "❄️",
    Electricidad: "⚡",
    Electricista: "⚡",
    Gasista: "🔥",
    Plomero: "🚰",
    Plomería: "🚰",
    Pintor: "🎨",
    Albañil: "🧱",
    Construcción: "🏗️",
    Flete: "🚚",
    Mudanza: "📦",
    Jardinería: "🌿",
    Limpieza: "🧹",
    Carpintero: "🪚",
    Herrero: "⚔️",
    Mecánico: "🔧",
    Cerrajero: "🔑",
    Techista: "🏠",
    Durlock: "🏗️",
};

const getServiceIcon = (serviceName: any) => {
    if (!serviceName || typeof serviceName !== "string") return "🛠️";

    // Buscar coincidencia parcial
    const lowerName = serviceName.toLowerCase();
    for (const key in serviceIcons) {
        if (lowerName.includes(key.toLowerCase())) {
            return serviceIcons[key];
        }
    }
    return "🛠️"; // Icono por defecto
};

const mappedServices = (profesional.servicios_lista || [])
    .filter((s: any) => s)
    .slice(0, 4)
    .map((s: any) => {

        const name = typeof s === 'string' ? s : (s.nombre || s.label || s.servicio || "Servicio");
        return {
            label: name,
            icon: getServiceIcon(name),
        };
    });

// --- GAMIFICATION CALCULATION (Server Side) ---
let xp = 0;
// Base
if (profesional.foto && !profesional.foto.includes("ui-avatars")) xp += 100;
if (profesional.rubro_principal) xp += 50;
if (profesional.zona) xp += 50;

// Missions
const hasFullProfile = (profesional.foto && !profesional.foto.includes("ui-avatars")) && profesional.rubro_principal && profesional.zona;
if (hasFullProfile) xp += 200;

const hasPortfolio = (profesional.portfolio || []).length >= 3;
if (hasPortfolio) xp += 150;

const hasGoodRating = (profesional.puntuacion || profesional.promedio || 0) >= 4.5;
if (hasGoodRating) xp += 300;

// Levels
const levels = [
    { name: "Novato 🌱", threshold: 0 },
    { name: "Aprendiz 🔨", threshold: 500 },
    { name: "Profesional 👷", threshold: 1500 },
    { name: "Experto 🦁", threshold: 5000 },
    { name: "Maestro 👑", threshold: 50000 },

];

let currentLevel = levels[0];
for (let i = 0; i < levels.length; i++) {
    if (xp >= levels[i].threshold) {
        currentLevel = levels[i];
    }
}
---

<Layout
    title={seoTitle}
    description={seoDescription}
    image={profesional.foto}
    hideHeader={mostrarComoLanding}
    hideFooter={mostrarComoLanding}
    hideIA={mostrarComoLanding}
>
    <!-- Map Script (Head) -->
    <script is:inline src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    
    <!-- jsPDF Script -->
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>

    <script is:inline>
        // Map Initialization
        document.addEventListener("astro:page-load", () => {
            try {
                const mapContainer = document.getElementById("mini-map");
                if (mapContainer && window.L) {
                    const lat = parseFloat(mapContainer.dataset.lat);
                    const lng = parseFloat(mapContainer.dataset.lng);

                    if (!isNaN(lat) && !isNaN(lng)) {
                        if (mapContainer._leaflet_id) return; // Prevent re-initialization

                        const map = L.map("mini-map", {
                            center: [lat, lng],
                            zoom: 15,
                            attributionControl: false,
                            zoomControl: false,
                        });

                        L.tileLayer(
                            "https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png",
                            {
                                maxZoom: 19,
                            },
                        ).addTo(map);

                        L.circle([lat, lng], {
                            color: '#f97316', // Primary Orange
                            fillColor: '#f97316',
                            fillOpacity: 0.15,
                            radius: 800, // 800 meters approx
                            weight: 1
                        }).addTo(map);

                        // Add text label for context
                        L.popup({
                            closeButton: false,
                            autoClose: false,
                            closeOnClick: false,
                            className: 'zone-popup text-center font-bold text-xs',
                            offset: [0, -10]
                        })
                        .setLatLng([lat, lng])
                        .setContent('<div class="text-orange-600">Zona de Cobertura</div>')
                        .openOn(map);
                    }
                }
            } catch(e) { console.error("Error in profile scripts:", e); }
        });
    </script>

    {
        mostrarComoLanding ? (
            /* MODO LANDING NUEVO */
            <div class="landing-body font-sans min-h-screen bg-slate-100 flex items-center justify-center py-10 px-4 overflow-x-hidden">
                <ModernProfileCard
                    name={profesional.nombre}
                    role={profesional.seo_profesion || profesional.rubro_principal}
                    avatar={profesional.foto}
                    location={ubicacion}
                    rating={promedio.toFixed(1)}
                    priceInfo={profesional.presupuestos_config?.activo ? "Presupuestos sin cargo" : (profesional.precio_visita ? `Precio visita: $ ${Number(profesional.precio_visita).toLocaleString('es-AR')}` : "Consultar precio")}
                    services={mappedServices}
                    bio={profesional.descripcion}
                    experience={profesional.experiencia}
                    category={profesional.rubro_principal}
                    tags={profesional.etiquetas}
                    
                    /* Security Feature props */
                    id="btn-whatsapp-contact"
                    whatsappUrl="#"
                    data-whatsapp={profesional.telefono}
                    data-pro-id={idProfesional}
                    data-pro-name={profesional.nombre}
                />
                <div class="max-w-[360px] w-full mx-auto mt-8 bg-white/50 backdrop-blur-sm rounded-3xl p-6 border border-white/40 shadow-xl">
                   <ProfileReviews client:visible idProfesional={idProfesional} />
                </div>
            </div>
        ) : (
            /* MODO DIRECTORIO (NUEVO DISEÑO) */
            <div id="profile-directory" data-id={idProfesional} data-profesional-json={JSON.stringify(profesional)} class="bg-background-light font-sans min-h-screen text-neutral-black">
                <div class="max-w-7xl mx-auto px-4 md:px-8 pt-8">
                     <a href="/resultados" class="inline-flex items-center gap-2 text-sm font-bold text-gray-500 hover:text-primary transition-colors">
                        <span class="material-symbols-outlined text-lg">arrow_back</span> Volver a Resultados
