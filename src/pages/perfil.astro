                        <!-- SIDEBAR -->
                        <aside class="lg:col-span-4 space-y-8">
                            
                             <!-- Contact Card -->
                            <div class="sticky-card bg-white rounded-2xl p-8 shadow-elevated border border-neutral-gray-light z-40">
                                <div class="mb-8">
                                    <h3 class="text-2xl font-black text-neutral-black mb-2">Contratacin</h3>
                                    <div class="flex items-center gap-2 text-sm text-green-600 font-bold uppercase tracking-widest">
                                        <span class="size-2.5 bg-green-500 rounded-full animate-pulse shadow-sm"></span>
                                        Disponible
                                    </div>
                                </div>
                                <div class="space-y-4">
                                     {profesional.telefono && (
                                        <button 
                                            id="btn-whatsapp-contact"
                                            data-whatsapp={profesional.telefono}
                                            data-pro-id={idProfesional}
                                            data-pro-name={profesional.nombre}
                                            class="w-full flex items-center justify-center gap-3 bg-[#25D366] text-white rounded-xl py-4.5 font-black shadow-lg hover:opacity-95 transition-all text-base h-16">
                                            <span class="text-2xl"></span> WhatsApp
                                        </button>
                                     )}
                                     
                                     {profesional.servicios_lista?.length > 0 && (
                                        <button onclick="window.openBudgetModal()" class="w-full flex items-center justify-center gap-3 bg-neutral-black text-black rounded-xl py-4.5 font-black shadow-lg hover:bg-primary transition-all text-base h-16">
                                            <span class="text-2xl"></span> Ver Tarifario
                                        </button>
                                     )}
                                </div>
                                <div class="mt-10 pt-8 border-t border-neutral-gray-light space-y-5">
                                    <div class="flex justify-between items-center text-sm">
                                        <span class="text-neutral-gray font-bold uppercase tracking-wider text-[11px]">Zona</span>
                                        <span class="font-black text-neutral-black text-right">{ubicacion}</span>
                                    </div>
                                    <div class="flex justify-between items-center text-sm">
                                        <span class="text-neutral-gray font-bold uppercase tracking-wider text-[11px]">Presupuesto</span>
                                        <span class="font-black text-primary">
                                            {profesional.presupuestos_config?.activo 
                                              ? "Sin Cargo" 
                                              : (profesional.precio_visita ? `$${Number(profesional.precio_visita).toLocaleString('es-AR')}` : "Consultar")}
                                        </span>
                                    </div>
                                    <div class="flex justify-between items-center text-sm">
                                        <span class="text-neutral-gray font-bold uppercase tracking-wider text-[11px]">Factura</span>
                                        <span class="font-black text-neutral-black">
                                            {profesional.emite_factura ? "S (A/B/C)" : "No especificado"}
                                        </span>
                                    </div>

                                    {profesional.garantia?.ofrece && (
                                        <div class="flex justify-between items-center text-sm">
                                            <span class="text-neutral-gray font-bold uppercase tracking-wider text-[11px]">Garanta</span>
                                            <span class="font-black text-green-600">
                                                {profesional.garantia.tiempo ? `${profesional.garantia.tiempo} das` : "S"}
                                            </span>
                                        </div>
                                    )}

                                    {profesional.trabaja_con_equipo && (
                                        <div class="flex justify-between items-center text-sm">
                                            <span class="text-neutral-gray font-bold uppercase tracking-wider text-[11px]">Modalidad</span>
                                            <span class="font-black text-neutral-black">Con Equipo</span>
                                        </div>
                                    )}

                                    {profesional.formas_pago && profesional.formas_pago.length > 0 && (
                                        <div class="flex flex-col gap-1 text-sm pt-2 border-t border-dashed border-neutral-gray-light">
                                            <span class="text-neutral-gray font-bold uppercase tracking-wider text-[11px]">Medios de Pago</span>
                                            <div class="flex flex-wrap gap-1">
                                                {profesional.formas_pago.map((pago) => (
                                                    <span class="bg-slate-50 text-slate-600 px-2 py-0.5 rounded textxs border border-slate-100">{pago}</span>
                                                ))}
                                            </div>
                                        </div>
                                    )}

                                    {profesional.zonas && profesional.zonas.length > 0 && (
                                        <div class="flex flex-col gap-1 text-sm pt-2 border-t border-dashed border-neutral-gray-light">
                                            <span class="text-neutral-gray font-bold uppercase tracking-wider text-[11px]">Zonas de Cobertura</span>
                                            <p class="text-neutral-black font-medium text-xs leading-relaxed">
                                                {profesional.zonas.map((z) => typeof z === 'object' ? (z.nombre || z.label) : z).join(", ")}
                                            </p>
                                        </div>
                                    )}
                                    <div class="pt-4">
                                         <a href="/reportar" class="text-red-400 text-xs font-bold hover:text-red-500 flex items-center gap-1 justify-center">
                                            <span></span> Reportar este perfil
                                        </a>
                                    </div>
                                </div>
                            </div>
                            
                            {profesional.ubicacion_exacta?.activo && profesional.ubicacion_exacta?.lat && (
                                <div class="bg-white rounded-2xl p-2 border border-neutral-gray-light shadow-sm">
                                     <div id="mini-map" class="w-full h-48 rounded-xl bg-gray-200" data-lat={profesional.ubicacion_exacta.lat} data-lng={profesional.ubicacion_exacta.lng}></div>
                                </div>
                            )}

                            <div class="bg-primary/[0.03] rounded-2xl p-8 border border-primary/20">
                                <h4 class="font-black text-primary mb-3 flex items-center gap-2 uppercase text-xs tracking-[0.15em]">
                                    <span class="material-symbols-outlined text-xl">shield</span>
                                    Garanta Oficios
                                </h4>
                                <p class="text-sm text-neutral-gray-dark leading-relaxed font-semibold">
                                    Los trabajos realizados cuentan con el respaldo de nuestra comunidad. Verifica siempre la identidad del profesional.
                                </p>
                            </div>
                        </aside>
                    </div>
                </main>
            </div>
        )
    }

    <ProfileLightbox client:load images={profesional.portfolio || []} />

    <ProfileBudgetModal
        client:load
        services={profesional.servicios_lista}
        proName={profesional.nombre}
        proRubro={profesional.rubro_principal}
        proTel={profesional.telefono}
        proMat={profesional.matricula}
    />

    <script is:inline>
        document.addEventListener("astro:page-load", () => {
            const btnContact = document.getElementById("btn-whatsapp-contact");
            if (!btnContact) return;

            btnContact.addEventListener("click", async (e) => {
                e.preventDefault();
                
                // Intentar obtener idProfesional desde el atributo data si no est disponible directamente
                const proId = btnContact.getAttribute("data-pro-id");
                const proName = btnContact.getAttribute("data-pro-name");
                const whatsapp = btnContact.getAttribute("data-whatsapp");

                if (!proId || !proName || !whatsapp) {
                    console.error("Faltan datos para el contacto:", { proId, proName, whatsapp });
                    return;
                }

                // Generar token de 4 dgitos
                const safetyToken = Math.floor(1000 + Math.random() * 9000).toString();

                if (typeof Swal === 'undefined') {
                    // Fallback si SweetAlert no carg
                    window.open(`https://wa.me/549${whatsapp}?text=Hola ${proName}, te contacto desde DeOficios. Mi cdigo es ${safetyToken}`, "_blank");
                    return;
                }

                Swal.fire({
                    title: " Cdigo de Seguridad",
                    html: `
                        <p class="mb-4 text-gray-600">Tu codigo de verificacion para <strong>${proName}</strong> es:</p>
                        <div class="text-4xl font-black tracking-widest text-orange-600 bg-orange-50 py-4 rounded-xl border-2 border-orange-200 mb-4 shadow-inner">
                            ${safetyToken}
                        </div>
                        <p class="text-xs text-gray-500 uppercase font-black tracking-tight">Mostrale este codigo al profesional al llegar</p>
                    `,
                    confirmButtonText: "Ir a WhatsApp ",
                    confirmButtonColor: "#16a34a",
                    showCancelButton: true,
                    cancelButtonText: "Cancelar",
                    reverseButtons: true,
                    customClass: {
                        popup: 'rounded-3xl'
                    }
                }).then(async (result) => {
                    if (result.isConfirmed) {
                        try {
                            // Import dinmico para no cargar firebase si no es necesario al inicio
                            const { db, auth, addDoc, collection, serverTimestamp } = await import("/src/firebase/client.js");
                            
                            const user = auth.currentUser;

                            // Registrar el contacto en la DB
                            await addDoc(collection(db, "contactos"), {
                                proId: proId,
                                proNombre: proName,
                                clienteId: user?.uid || "anonimo",
                                clienteNombre: user?.displayName || "Anonimo",
                                token: safetyToken,
                                fecha: serverTimestamp(),
                                visto: false,
                            });

                            // Abrir WhatsApp
                            const waUrl = `https://wa.me/549${whatsapp}?text=${encodeURIComponent(`Hola ${proName}, te contacto desde DeOficios. Mi cdigo de seguridad es ${safetyToken}`)}`;
                            window.open(waUrl, "_blank");

                            // Feedback prompt despus de unos segundos
                            setTimeout(() => {
                                Swal.fire({
                                    title: "Pudiste contactarlo? ",
                                    text: "Tu feedback nos ayuda a mejorar.",
                                    icon: "question",
                                    showDenyButton: true,
                                    showCancelButton: true,
                                    confirmButtonText: " S",
                                    denyButtonText: " No contest",
                                    cancelButtonText: " Reportar",
                                    confirmButtonColor: "#16a34a",
                                    denyButtonColor: "#ef4444",
                                }).then(async (res) => {
                                    let type = "";
                                    if (res.isConfirmed) type = "positivo";
                                    else if (res.isDenied) type = "sin_respuesta";
                                    else if (res.isDismissed && res.dismiss === "cancel") type = "reporte";

                                    if (type) {
                                        await addDoc(collection(db, "feedback_contactos"), {
                                            proId: proId,
                                            tipo: type,
                                            fecha: serverTimestamp(),
                                            uid: user?.uid || "anonimo",
                                        });
                                    }
                                });
                            }, 5000);

                        } catch (err) {
                            console.error("Error en contacto:", err);
                            // Fallback de emergencia
                            window.open(`https://wa.me/549${whatsapp}`, "_blank");
                        }
                    }
                });
            });
        });
