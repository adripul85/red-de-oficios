                        </div>
                   </section>

                    <!-- NAV TABS -->
                    <nav class="flex border-b border-neutral-gray-light mb-10 overflow-x-auto">
                        <a class="flex-shrink-0 border-b-4 border-primary px-8 py-5 text-sm font-extrabold text-neutral-black tracking-widest uppercase" href="#sobre-mi">Sobre m</a>
                        <a class="flex-shrink-0 border-b-4 border-transparent px-8 py-5 text-sm font-bold text-neutral-gray hover:text-primary transition-colors tracking-widest uppercase" href="#portfolio">Trabajos</a>
