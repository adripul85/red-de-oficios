                     <a href="/resultados" class="inline-flex items-center gap-2 text-sm font-bold text-gray-500 hover:text-primary transition-colors">
                        <span class="material-symbols-outlined text-lg">arrow_back</span> Volver a Resultados
                    </a>
               </div>

               <main class="max-w-5xl mx-auto px-6 md:px-12 lg:px-24 py-10">
                    <!-- HEADER PROFILE CARD -->
                    <section class="bg-white rounded-xl p-6 md:p-8 mb-8 shadow-subtle flex flex-col md:flex-row justify-between items-center gap-6 border border-neutral-gray-light animate-fade-in-up">
                        <div class="flex flex-col md:flex-row items-center gap-8 text-center md:text-left w-full">
                             <div class="relative group">
                                <img src={profesional.foto || ("https://ui-avatars.com/api/?name=" + profesional.nombre + "&background=random")} class="w-28 h-40 md:w-36 md:h-52 rounded-full border-4 border-white shadow-lg object-cover" />
                                {profesional.verificado && (
