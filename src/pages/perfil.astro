                                            </span>
                                            
                                            <!-- Gamification Icons -->
                                            <div class="flex items-center -space-x-1">
                                                {hasFullProfile && <div class="w-8 h-8 rounded-full bg-amber-50 flex items-center justify-center border-2 border-white shadow-sm" title="Perfil Completo">🏅</div>}
                                                {hasPortfolio && <div class="w-8 h-8 rounded-full bg-orange-50 flex items-center justify-center border-2 border-white shadow-sm" title="Portfolio Destacado">🎨</div>}
                                                {hasGoodRating && <div class="w-8 h-8 rounded-full bg-yellow-50 flex items-center justify-center border-2 border-white shadow-sm" title="Excelente Reputación">⭐</div>}
                                                {profesional.verificado && <div class="w-8 h-8 rounded-full bg-blue-50 flex items-center justify-center border-2 border-white shadow-sm" title="Identidad Verificada">🛡️</div>}
                                            </div>
                                        </div>
                                    </div>

                                    <p class="text-slate-400 font-bold text-xs uppercase tracking-widest flex items-center gap-2">
                                        <span class="material-symbols-outlined text-sm text-orange-500">location_on</span>
                                        <span class="capitalize">{ubicacion}</span>
                                        <span class="w-1 h-1 bg-slate-200 rounded-full"></span>
                                        <span class={profesional.verificado ? "text-orange-600" : "text-slate-400"}>
                                            {profesional.verificado ? "Identidad Verificada" : "Perfil Registrado"}
                                        </span>
                                    </p>

                                    <!-- Rating & Category -->
                                    <div class="flex flex-wrap items-center gap-6 pt-2">
                                        <div class="flex items-center gap-2 bg-slate-50 px-4 py-2 rounded-2xl border border-slate-100">
                                            <span class="text-orange-500 font-black text-lg">★</span>
                                            <span class="text-slate-900 font-extrabold text-lg">{promedio.toFixed(1)}</span>
                                            <span class="text-slate-400 text-xs font-bold uppercase tracking-wide">({votos} reseñas)</span>
                                        </div>

                                        <div class="flex items-center gap-2 text-slate-500 font-bold text-sm bg-slate-50 px-4 py-2 rounded-2xl border border-slate-100">
                                            <span class="material-symbols-outlined text-lg text-slate-400">work</span>
                                            {profesional.rubro_principal}
                                        </div>
                                    </div>
                                </div>

                                <!-- Right: CTAs -->
                                <div class="flex items-center gap-4 w-full md:w-auto">
                                    
                                    <!-- Favorite Button -->
                                    <button
                                        id="btn-toggle-fav"
                                        class="w-14 h-14 rounded-full bg-red-50 text-red-500 flex items-center justify-center shadow-lg border-2 border-white hover:scale-110 transition-all shrink-0 active:scale-95"
                                    >
                                        <span class="material-symbols-outlined font-bold">favorite</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- NAV TABS -->
                    <nav class="flex border-b border-neutral-gray-light mb-10 overflow-x-auto">
                        <a class="flex-shrink-0 border-b-4 border-primary px-8 py-5 text-sm font-extrabold text-neutral-black tracking-widest uppercase" href="#sobre-mi">Sobre mí</a>
                        <a class="flex-shrink-0 border-b-4 border-transparent px-8 py-5 text-sm font-bold text-neutral-gray hover:text-primary transition-colors tracking-widest uppercase" href="#portfolio">Trabajos</a>
                        <a class="flex-shrink-0 border-b-4 border-transparent px-8 py-5 text-sm font-bold text-neutral-gray hover:text-primary transition-colors tracking-widest uppercase" href="#reviews-section">Opiniones</a>
                    </nav>

                    <div class="grid grid-cols-1 lg:grid-cols-12 gap-10 lg:gap-16 items-start mt-12">
                        <!-- MAIN CONTENT column -->
                        <div class="lg:col-span-8 space-y-16">
                            
                            <!-- ABOUT SECTION -->
                            <section id="sobre-mi" class="bg-white rounded-xl p-8 md:p-10 shadow-subtle border border-neutral-gray-light">
                                <h2 class="text-lg font-black text-neutral-black mb-6 tracking-tight">Experiencia y Trayectoria</h2>
                                <div class="space-y-4 text-neutral-gray-dark leading-relaxed text-sm whitespace-pre-line">
                                    {profesional.descripcion || "Este profesional no ha detallado su experiencia aún."}
                                </div>

                                <div class="mt-10">
                                    <h3 class="text-xs font-black text-neutral-gray uppercase tracking-[0.2em] mb-6">Servicios Ofrecidos</h3>
                                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                                        {profesional.servicios_lista?.map((s: any) => (
                                            <div class="flex items-center gap-3 p-3 rounded-xl bg-white border border-neutral-gray-light hover:border-primary/40 transition-colors">
                                                <span class="material-symbols-outlined text-primary text-xl">check_circle</span>
                                                <span class="text-xs font-bold text-neutral-black capitalize">{typeof s === 'object' ? (s.nombre || s.label || "Servicio") : s}</span>
                                            </div>
                                        ))}
                                        {profesional.etiquetas?.map((tag: string) => (
                                            <div class="flex items-center gap-3 p-3 rounded-xl bg-slate-50 border border-slate-100 hover:border-primary/40 transition-colors">
                                                <span class="material-symbols-outlined text-primary text-xl">check_circle</span>
                                                <span class="text-xs font-bold text-slate-600 capitalize">{tag}</span>
                                            </div>
                                        ))}
                                        {(!profesional.servicios_lista || profesional.servicios_lista.length === 0) && (!profesional.etiquetas || profesional.etiquetas.length === 0) && (
                                            <p class="text-sm text-gray-500 italic">No se especificaron servicios ni etiquetas.</p>
                                        )}
                                    </div>
                                </div>
                            </section>

                            <!-- PORTFOLIO SECTION -->
                            {profesional.portfolio && profesional.portfolio.length > 0 && (
                                <section id="portfolio" class="mb-24">
                                    <div class="flex justify-between items-center mb-10">
                                        <h2 class="text-2xl font-black text-slate-900 tracking-tight uppercase">Portafolio Destacado</h2>
                                    </div>
                                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                                        {profesional.portfolio.map((img: any, index: number) => {
                                            const isLegacy = typeof img === "string";
                                            const url = isLegacy ? img : (img.url || img.URL || "");
                                            const title = isLegacy ? "" : (img.titulo || "");
                                            const desc = isLegacy ? "" : (img.descripcion || "");
                                            const date = isLegacy ? "" : (img.fecha || "");
                                            
                                            if (!url) return null;
                                            return (
                                                <div class="group bg-white rounded-3xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-500 border border-slate-100 cursor-pointer open-lightbox" data-index={index}>
                                                    <div class="relative h-64 overflow-hidden bg-slate-50">
                                                        <img 
                                                            src={url} 
                                                            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                                                            alt={title || "Foto de trabajo"}
                                                            loading="lazy"
                                                        />
                                                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity flex items-end p-6">
                                                            <span class="bg-white/20 backdrop-blur-md text-white text-[10px] font-black px-4 py-2 rounded-full tracking-widest uppercase border border-white/30">Ver pantalla completa</span>
                                                        </div>
                                                    </div>
                                                    {(title || desc || date) && (
                                                        <div class="p-6 space-y-2">
                                                            {title && <h4 class="font-black text-slate-900 text-lg leading-tight">{title}</h4>}
                                                            {desc && <p class="text-sm text-slate-500 line-clamp-2 leading-relaxed">{desc}</p>}
                                                            {date && (
                                                                <div class="flex items-center gap-2 text-[10px] font-black text-orange-600 uppercase tracking-widest pt-2">
                                                                    <span class="material-symbols-outlined text-sm">calendar_today</span>
                                                                    {date}
                                                                </div>
                                                            )}
                                                        </div>
                                                    )}
                                                </div>
                                            );
                                        })}
                                    </div>
                                </section>
                            )}

                            <div class="h-32"></div> <!-- Substantial air before reviews -->

                            <!-- REVIEWS SECTION -->
                            <ProfileReviews client:visible idProfesional={idProfesional} />

                        </div>

                        <!-- SIDEBAR -->
                        <aside class="lg:col-span-4 space-y-12 lg:sticky lg:top-24">
                            
                             <!-- Contact Card -->
                            <div class="sticky-card bg-white rounded-2xl p-8 shadow-elevated border border-neutral-gray-light z-40">
                                <div class="mb-8">
                                    <h3 class="text-2xl font-black text-neutral-black mb-2">Contratación</h3>
                                    <div class="flex items-center gap-2 text-sm text-green-600 font-bold uppercase tracking-widest">
                                        <span class="size-2.5 bg-green-500 rounded-full animate-pulse shadow-sm"></span>
                                        Disponible
                                    </div>
                                </div>
                                <div class="space-y-4">
                                     {profesional.telefono && (
                                        <button 
                                            id="btn-whatsapp-contact"
                                            data-whatsapp={profesional.telefono}
                                            data-pro-id={idProfesional}
                                            data-pro-name={profesional.nombre}
                                            class="w-full flex items-center justify-center gap-3 bg-[#25D366] text-white rounded-xl py-4.5 font-black shadow-lg hover:opacity-95 transition-all text-base h-16">
                                            <span class="text-2xl">💬</span> WhatsApp
                                        </button>
                                     )}
                                     
                                     {profesional.servicios_lista?.length > 0 && (
                                        <button onclick="window.openBudgetModal()" class="w-full flex items-center justify-center gap-3 bg-slate-400 text-white rounded-xl py-4.5 font-black shadow-lg hover:bg-primary transition-all text-base h-16">
                                            <span class="text-2xl">📄</span> Ver Presupuestos
                                        </button>
                                     )}
                                </div>
                                <div class="mt-10 pt-8 border-t border-neutral-gray-light space-y-5">
                                    <div class="flex justify-between items-center text-sm">
                                        <span class="text-neutral-gray font-bold uppercase tracking-wider text-[11px]">Zona</span>
                                        <span class="font-black text-neutral-black text-right">{ubicacion}</span>
                                    </div>
                                    <div class="flex justify-between items-center text-sm">
                                        <span class="text-neutral-gray font-bold uppercase tracking-wider text-[11px]">Presupuesto</span>
                                        <span class="font-black text-primary">
                                            {profesional.presupuestos_config?.activo ? "Sin Cargo" : "Consultar"}
                                        </span>
                                    </div>
                                    <div class="flex justify-between items-center text-sm">
                                        <span class="text-neutral-gray font-bold uppercase tracking-wider text-[11px]">Factura</span>
                                        <span class="font-black text-neutral-black">
                                            {profesional.emite_factura ? "Sí (A/B/C)" : "No especificado"}
                                        </span>
                                    </div>

                                    {profesional.garantia?.ofrece && (
                                        <div class="flex justify-between items-center text-sm">
                                            <span class="text-neutral-gray font-bold uppercase tracking-wider text-[11px]">Garantía</span>
                                            <span class="font-black text-green-600">
                                                {profesional.garantia.tiempo ? `${profesional.garantia.tiempo} días` : "Sí"}
                                            </span>
                                        </div>
                                    )}

                                    {profesional.trabaja_con_equipo && (
                                        <div class="flex justify-between items-center text-sm">
                                            <span class="text-neutral-gray font-bold uppercase tracking-wider text-[11px]">Modalidad</span>
                                            <span class="font-black text-neutral-black">Con Equipo</span>
                                        </div>
                                    )}

                                    {profesional.formas_pago && profesional.formas_pago.length > 0 && (
                                        <div class="flex flex-col gap-1 text-sm pt-2 border-t border-dashed border-neutral-gray-light">
                                            <span class="text-neutral-gray font-bold uppercase tracking-wider text-[11px]">Medios de Pago</span>
                                            <div class="flex flex-wrap gap-1">
                                                {profesional.formas_pago.map((pago: string) => (
                                                    <span class="bg-slate-50 text-slate-600 px-2 py-0.5 rounded textxs border border-slate-100">{pago}</span>
                                                ))}
                                            </div>
                                        </div>
                                    )}

                                    {profesional.zonas && profesional.zonas.length > 0 && (
                                        <div class="flex flex-col gap-2 text-sm pt-4 border-t border-dashed border-neutral-gray-light">
                                            <span class="text-neutral-gray font-bold uppercase tracking-wider text-[11px]">Zonas de Cobertura</span>
                                            <div class="flex flex-wrap gap-1.5">
                                                {profesional.zonas.map((z: any) => (
                                                    <span class="bg-blue-50 text-blue-700 px-2 py-1 rounded-lg text-xs font-semibold border border-blue-100">
                                                        {typeof z === 'object' ? (z.nombre || z.label) : z}
                                                    </span>
                                                ))}
                                            </div>
                                        </div>
                                    )}
                                    <div class="pt-4">
                                         <button id="btn-report-profile" class="text-red-400 text-xs font-bold hover:text-red-500 flex items-center gap-1 justify-center w-full transition-colors">
                                            <span>🚩</span> Reportar este perfil
                                        </button>
                                    </div>
                                </div>
                            </div>
                            
                            {profesional.ubicacion_exacta?.activo && profesional.ubicacion_exacta?.lat && (
                                <div class="bg-white rounded-2xl p-2 border border-neutral-gray-light shadow-sm mt-12">
                                     <div id="mini-map" class="w-full h-48 rounded-xl bg-gray-200" data-lat={profesional.ubicacion_exacta.lat} data-lng={profesional.ubicacion_exacta.lng}></div>
                                </div>
                            )}

                            <div class="bg-primary/5 rounded-2xl p-8 border border-primary/20">
                                <h4 class="font-black text-primary mb-3 flex items-center gap-2 uppercase text-xs tracking-[0.15em]">
                                    <span class="material-symbols-outlined text-xl">shield</span>
                                    Garantía Oficios
                                </h4>
                                <p class="text-sm text-neutral-gray-dark leading-relaxed font-semibold">
                                    Los trabajos realizados cuentan con el respaldo de nuestra comunidad. Verifica siempre la identidad del profesional.
                                </p>
                            </div>
                        </aside>
                    </div>
                </main>
            </div>
        )
    }

    <ProfileLightbox client:load images={profesional.portfolio || []} />
    <ProfileBudgetModal
        client:load
        services={profesional.servicios_lista}
        proName={profesional.nombre}
        proRubro={profesional.rubro_principal}
        proTel={profesional.telefono}
        proMat={profesional.matricula}
    />

    <script>
        document.addEventListener("astro:page-load", () => {
            const btnContact = document.getElementById("btn-whatsapp-contact");
            if (!btnContact) return;

            btnContact.addEventListener("click", async (e) => {
                e.preventDefault();
                
                // Intentar obtener idProfesional desde el atributo data si no está disponible directamente
                const proId = btnContact.getAttribute("data-pro-id");
                const proName = btnContact.getAttribute("data-pro-name");
                const whatsapp = btnContact.getAttribute("data-whatsapp");

                if (!proId || !proName || !whatsapp) {
                    console.error("Faltan datos para el contacto:", { proId, proName, whatsapp });
                    return;
                }

                // Generar token de 4 dígitos
                const safetyToken = Math.floor(1000 + Math.random() * 9000).toString();

                if (typeof Swal === 'undefined') {
                    // Fallback si SweetAlert no cargó
                    window.open(`https://wa.me/549${whatsapp}?text=Hola ${proName}, te contacto desde DeOficios. Mi código es ${safetyToken}`, "_blank");
                    return;
                }

                Swal.fire({
                    title: "🔐 Código de Seguridad",
                    html: `
                        <p class="mb-4 text-gray-600">Tu código de verificación para <strong>${proName}</strong> es:</p>
                        <div class="text-4xl font-black tracking-widest text-orange-600 bg-orange-50 py-4 rounded-xl border-2 border-orange-200 mb-4 shadow-inner">
                            ${safetyToken}
                        </div>
                        <p class="text-xs text-gray-500 uppercase font-black tracking-tight">Mostrale este código al profesional al llegar</p>
                    `,
                    confirmButtonText: "Ir a WhatsApp 💬",
                    confirmButtonColor: "#16a34a",
                    showCancelButton: true,
                    cancelButtonText: "Cancelar",
                    reverseButtons: true,
                    customClass: {
                        popup: 'rounded-3xl'
                    }
                }).then(async (result) => {
                    if (result.isConfirmed) {
                        try {
                            // Import dinámico para no cargar firebase si no es necesario al inicio
                            const { addDoc, collection, serverTimestamp } = await import("https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js");
                            const { db, auth } = await import("/src/firebase/client.js");
                            
                            const user = auth.currentUser;

                            // Registrar el contacto en la DB
                            await addDoc(collection(db, "contactos"), {
                                proId: proId,
                                proNombre: proName,
                                clienteId: user?.uid || "anonimo",
                                clienteNombre: user?.displayName || "Anonimo",
                                token: safetyToken,
                                fecha: serverTimestamp(),
                                visto: false,
                            });

                            // Abrir WhatsApp
                            const waUrl = `https://wa.me/549${whatsapp}?text=${encodeURIComponent(`Hola ${proName}, te contacto desde DeOficios. Mi código de seguridad es ${safetyToken}`)}`;
                            window.open(waUrl, "_blank");

                            // Feedback prompt después de unos segundos
                            setTimeout(() => {
                                Swal.fire({
                                    title: "¿Pudiste contactarlo? 🤔",
                                    text: "Tu feedback nos ayuda a mejorar.",
                                    icon: "question",
                                    showDenyButton: true,
                                    showCancelButton: true,
                                    confirmButtonText: "✅ Sí",
                                    denyButtonText: "🚫 No contestó",
                                    cancelButtonText: "🚩 Reportar",
                                    confirmButtonColor: "#16a34a",
                                    denyButtonColor: "#ef4444",
                                }).then(async (res) => {
                                    let type = "";
                                    if (res.isConfirmed) type = "positivo";
                                    else if (res.isDenied) type = "sin_respuesta";
                                    else if (res.isDismissed && res.dismiss === "cancel") type = "reporte";

                                    if (type) {
                                        await addDoc(collection(db, "feedback_contactos"), {
                                            proId: proId,
                                            tipo: type,
                                            fecha: serverTimestamp(),
                                            uid: user?.uid || "anonimo",
                                        });
                                    }
                                });
                            }, 5000);

                        } catch (err) {
                            console.error("Error en contacto:", err);
                            // Fallback de emergencia
                            window.open(`https://wa.me/549${whatsapp}`, "_blank");
                        }
                    }
                });
            });
        });


        // CONSOLIDATED CLIENT LOGIC (Bundled)
        import { auth, db } from "../firebase/client";
        import { doc, getDoc, updateDoc, arrayUnion, arrayRemove, setDoc, addDoc, collection, serverTimestamp } from "firebase/firestore";
        import { onAuthStateChanged } from "firebase/auth";

        document.addEventListener("astro:page-load", async () => {
             console.log("🚀 Profile page loaded - checking elements");

             // 1. REPORT PROFILE LOGIC
             const btnReport = document.getElementById("btn-report-profile");
             const profileDiv = document.getElementById("profile-directory");
             
             console.log("Report Btn:", btnReport, "Profile Div:", profileDiv);

             if(btnReport && profileDiv) {
                 btnReport.addEventListener("click", () => {
                     // @ts-ignore
                     const Swal = window.Swal;

                     if (!Swal) {
                         alert("Error: Librería de alertas no cargada.");
                         return;
                     }

                     Swal.fire({
                        title: '🚩 Reportar Perfil',
                        text: '¿Por qué quieres reportar a este profesional?',
                        input: 'select',
                        inputOptions: {
                            'fraude': 'Posible Fraude',
                            'trato': 'Mal trato / Comportamiento ofensivo',
                            'spam': 'Spam / Publicidad engañosa',
                            'identidad': 'Suplantación de identidad',
                            'otro': 'Otro motivo'
                        },
                        inputPlaceholder: 'Selecciona una razón',
                        showCancelButton: true,
                        confirmButtonText: 'Enviar Reporte',
                        confirmButtonColor: '#ef4444',
                        cancelButtonText: 'Cancelar',
                        inputValidator: (value) => {
                            return !value && 'Debes seleccionar un motivo';
                        }
                    }).then(async (result) => {
                        if (result.isConfirmed) {
                             try {
                                await addDoc(collection(db, "reportes"), {
                                    idProfesional: profileDiv.dataset.id,
                                    motivo: result.value,
                                    fecha: serverTimestamp(),
                                    reportadoPor: auth.currentUser ? auth.currentUser.uid : 'anonimo'
                                });

                                Swal.fire('Reporte Enviado', 'Nuestro equipo revisará el caso.', 'success');
                             } catch(e) {
                                 console.error("Error al enviar reporte:", e);
                                 Swal.fire('Error', 'No se pudo enviar el reporte', 'error');
                             }
                        }
                    });
                 });
             }

             // 2. FAVORITES LOGIC
             const btnFav = document.getElementById("btn-toggle-fav");
             if(btnFav && profileDiv) {
                 const idProfesional = profileDiv.dataset.id;
                 let profesionalJson = {};
                 try {
                    profesionalJson = JSON.parse(profileDiv.dataset.profesionalJson);
                 } catch(e) { console.error("Error parsing pro json", e); }

                 onAuthStateChanged(auth, async (user) => {
                     if(!user) return; 

                     const favRef = doc(db, "favoritos", user.uid);
                     let isFav = false;

                     try {
                        const favSnap = await getDoc(favRef);
                        if(favSnap.exists()) {
                            const data = favSnap.data();
                            const list = data.profesionales || [];
                            isFav = list.some(p => p.id === idProfesional);
                        }
                     } catch(e) { console.error("Error fetching favs", e); }

                     updateFavIcon(isFav);

                     btnFav.addEventListener("click", async () => {
                         // @ts-ignore
                          const Swal = window.Swal;
                          
                          if(!user) {
                              if(Swal) Swal.fire('Inicia Sesión', 'Debes iniciar sesión para guardar favoritos', 'info');
                              else alert('Debes iniciar sesión');
                              return;
                          }
                          
                          // Toggle state immediately for UI responsiveness
                          isFav = !isFav;
                          updateFavIcon(isFav);

                          try {
                              if (isFav) {
                                  // Add
                                  await setDoc(favRef, {
                                      profesionales: arrayUnion({
                                          id: idProfesional,
                                          nombre: profesionalJson.nombre || "Profesional",
                                          rubro: profesionalJson.rubro_principal || "",
                                          foto: profesionalJson.foto || "",
                                          zona: profesionalJson.zona || ""
                                      })
                                  }, { merge: true });
                              } else {
                                  // Remove - Read-Modify-Write strategy for object arrays
                                   const currentSnap = await getDoc(favRef);
                                   if(currentSnap.exists()) {
                                       const currentList = currentSnap.data().profesionales || [];
                                       const newList = currentList.filter(p => p.id !== idProfesional);
                                       await updateDoc(favRef, { profesionales: newList });
                                   }
                              }
                          } catch(e) {
                              console.error("Error updating fav:", e);
                              // Revert if error
                              isFav = !isFav;
                              updateFavIcon(isFav);
                              if(Swal) Swal.fire('Error', 'No se pudo actualizar favoritos', 'error');
                          }
                     });
                 });

                 function updateFavIcon(fav) {
                     const icon = btnFav.querySelector(".material-symbols-outlined");
                     if(!icon) return;
                     
                     if(fav) {
                         icon.style.fontVariationSettings = "'FILL' 1";
                         btnFav.classList.add("text-red-500", "bg-red-50");
                         btnFav.classList.remove("text-slate-400", "bg-slate-50");
                     } else {
                         icon.style.fontVariationSettings = "'FILL' 0";
                         btnFav.classList.remove("text-red-500", "bg-red-50");
                         btnFav.classList.add("text-slate-400", "bg-slate-50");
                     }
                 }
             }
        });
    </script>
