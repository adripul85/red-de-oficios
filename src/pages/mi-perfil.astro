    <script is:inline src="https://cdn.jsdelivr.net/npm/sweetalert2@11"
    ></script>
    <script
        is:inline
        src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"
