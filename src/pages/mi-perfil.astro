                                            placeholder="Ej: 12345"
                                            data-allow-free
                                        />
                                    </div>
                                </div>

                                <!-- MULTI-RUBRO Y MULTI-ZONA -->
                                <div class="grid md:grid-cols-2 gap-6 mb-4">
                                    <div>
                                        <label
                                            class="block text-xs font-bold text-slate-500 mb-2 uppercase tracking-wider"
