<script>
    // ğŸ”¥ IMPORTANTE: Ajustamos las rutas aquÃ­ tambiÃ©n (../../)
    import { auth, db } from "../../firebase/client";
    import { onAuthStateChanged } from "firebase/auth";
    import {
        collection,
        query,
        where,
        getDocs,
        doc,
        updateDoc,
        getDoc,
    } from "firebase/firestore";

    document.addEventListener("astro:page-load", () => {
        console.log("ğŸš€ [ADMIN-VALIDACIONES] PÃ¡gina cargada/navegada");

        const container = document.getElementById("cards-container");
        const loading = document.getElementById("loading");
        const empty = document.getElementById("empty-state");

        // 1. VERIFICAR ADMIN
        onAuthStateChanged(auth, async (user) => {
            if (!user) return (window.location.href = "/");

            const docRef = doc(db, "profesionales", user.uid);
            const docSnap = await getDoc(docRef);

            // AQUI DEFINES QUIÃ‰N ES ADMIN (Reemplaza con tu lÃ³gica o mail si prefieres)
            const data = docSnap.data();
            const isAdmin =
                data && (data.rol === "admin" || data.rol === "moderador");

            if (isAdmin) {
                cargarSolicitudes();
            } else {
                alert("â›” Acceso Denegado: Solo personal autorizado.");
                window.location.href = "/";
            }
        });

        // 2. CARGAR SOLICITUDES
        async function cargarSolicitudes() {
            // Buscamos profesionales donde 'validacion_estado' sea 'pendiente'
            const q = query(
                collection(db, "profesionales"),
                where("validacion_estado", "==", "pendiente"),
            );

            try {
                const querySnapshot = await getDocs(q);
                loading.classList.add("hidden");

                if (querySnapshot.empty) {
                    empty.classList.remove("hidden");
                    return;
                }

                container.innerHTML = "";
                querySnapshot.forEach((docSnap) => {
                    crearTarjeta(docSnap.id, docSnap.data());
                });
            } catch (error) {
                console.error(error);
                loading.innerHTML = `<div class="bg-red-100 text-red-700 p-4 rounded">Error cargando datos: ${error.message}</div>`;
            }
        }

        // 3. RENDERIZAR TARJETA
        function crearTarjeta(uid, data) {
            const card = document.createElement("div");
            card.className =
                "bg-white rounded-xl shadow-md border border-gray-200 overflow-hidden flex flex-col hover:shadow-lg transition";

            card.innerHTML = `
            <div class="p-5 border-b border-gray-100 flex items-center gap-4 bg-gray-50">
                <img src="${data.foto || `https://ui-avatars.com/api/?name=${data.nombre}`}" class="w-12 h-12 rounded-full object-cover border-2 border-white shadow-sm">
                <div>
                    <h3 class="font-bold text-gray-800 text-sm leading-tight">${data.nombre}</h3>
                    <p class="text-xs text-gray-500 uppercase font-bold tracking-wide">${data.rubro_principal}</p>
                </div>
            </div>

            <div class="p-5 space-y-4 flex-1">
                
                <div class="bg-blue-50 p-3 rounded-lg border border-blue-100">
                    <p class="text-xs font-bold text-blue-800 uppercase mb-1">ğŸªª Documento DNI</p>
                    ${
                        data.doc_dni
                            ? `<a href="${data.doc_dni}" target="_blank" class="text-sm text-blue-600 hover:underline flex items-center gap-1">ğŸ‘ï¸ Ver Documento</a>`
                            : '<span class="text-red-500 text-xs font-bold">âŒ No subido</span>'
                    }
                </div>

                <div class="bg-purple-50 p-3 rounded-lg border border-purple-100">
                    <p class="text-xs font-bold text-purple-800 uppercase mb-1">âš–ï¸ Antecedentes</p>
                    ${
                        data.doc_antecedentes
                            ? `<a href="${data.doc_antecedentes}" target="_blank" class="text-sm text-purple-600 hover:underline flex items-center gap-1">ğŸ‘ï¸ Ver Documento</a>`
                            : '<span class="text-red-500 text-xs font-bold">âŒ No subido</span>'
                    }
                </div>

            </div>

            <div class="p-4 border-t border-gray-100 grid grid-cols-2 gap-3 bg-gray-50">
                <button class="btn-reject w-full py-2 bg-white border border-red-200 text-red-600 rounded-lg font-bold text-xs hover:bg-red-50 transition">
                    Rechazar
                </button>
                <button class="btn-approve w-full py-2 bg-green-600 text-white rounded-lg font-bold text-xs hover:bg-green-700 shadow-sm transition">
                    âœ… Aprobar
                </button>
            </div>
        `;

            // LÃ³gica Botones
            const btnApprove = card.querySelector(".btn-approve");
            const btnReject = card.querySelector(".btn-reject");

            btnApprove.onclick = async () => {
                if (
                    !confirm(
                        `Â¿Confirmas que los documentos de ${data.nombre} son vÃ¡lidos?`,
                    )
                )
                    return;
                try {
                    await updateDoc(doc(db, "profesionales", uid), {
                        verificado: true,
                        validacion_estado: "aprobado",
                    });
                    animarSalida(card);
                } catch (e) {
                    alert("Error: " + e.message);
                }
            };

            btnReject.onclick = async () => {
                if (!confirm(`Â¿Rechazar documentaciÃ³n de ${data.nombre}?`))
                    return;
                try {
                    await updateDoc(doc(db, "profesionales", uid), {
                        verificado: false,
                        validacion_estado: "rechazado",
                    });
                    animarSalida(card);
                } catch (e) {
                    alert("Error: " + e.message);
                }
            };

            container.appendChild(card);
        }

        function animarSalida(element) {
            element.style.transform = "scale(0.9)";
            element.style.opacity = "0";
            setTimeout(() => {
                element.remove();
                if (container.children.length === 0)
                    empty.classList.remove("hidden");
            }, 300);
        }
    }); // End of astro:page-load
</script>
