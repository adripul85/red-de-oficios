---
import Layout from "../../layouts/Layout.astro";
import { db } from "../../firebase/client";
---

<Layout title="Finanzas - Admin">
    <div class="admin-container">
        <!-- HEADER -->
        <header
            class="header-finance flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
            <div>
                <a
                    href="/admin"
                    class="text-slate-500 hover:text-slate-800 font-medium mb-2 inline-block"> Volver al Panel</a>
                <h1 class="text-2xl font-bold text-slate-800">
                    Finanzas de Plataforma 
                </h1>
            </div>

            <div class="flex items-center gap-3">
                <button
                    id="btn-add-income"
                    class="bg-green-600 hover:bg-green-700 text-white font-bold px-4 py-2 rounded-lg text-sm transition flex items-center gap-2 shadow-sm">
                    <span>+</span> Ingreso Manual
                </button>
                <button
                    id="btn-add-expense"
                    class="bg-red-600 hover:bg-red-700 text-white font-bold px-4 py-2 rounded-lg text-sm transition flex items-center gap-2 shadow-sm">
                    <span>-</span> Gasto
                </button>
            </div>
        </header>

        <!-- KPIS -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <!-- Ingresos -->
            <div
                class="bg-white p-6 rounded-2xl shadow-sm border border-slate-200">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-3 bg-green-50 rounded-xl">
                        <span class="text-2xl"></span>
                    </div>
                    <span
                        class="text-xs text-green-600 font-bold bg-green-50 px-2 py-1 rounded-full">Total</span>
                </div>
                <p class="text-sm text-slate-500 font-medium mb-1">Ingresos</p>
                <h3 id="kpi-ingresos" class="text-3xl font-bold text-green-600">
                    $0
                </h3>
            </div>

            <!-- Gastos -->
            <div
                class="bg-white p-6 rounded-2xl shadow-sm border border-slate-200">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-3 bg-red-50 rounded-xl">
                        <span class="text-2xl"></span>
                    </div>
                    <span
                        class="text-xs text-red-600 font-bold bg-red-50 px-2 py-1 rounded-full">Total</span>
                </div>
                <p class="text-sm text-slate-500 font-medium mb-1">Gastos</p>
                <h3 id="kpi-gastos" class="text-3xl font-bold text-red-600">
                    $0
                </h3>
            </div>

            <!-- Balance -->
            <div
                class="bg-white p-6 rounded-2xl shadow-sm border border-slate-200">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-3 bg-blue-50 rounded-xl">
                        <span class="text-2xl"></span>
                    </div>
                    <span
                        class="text-xs text-blue-600 font-bold bg-blue-50 px-2 py-1 rounded-full">Neto</span>
                </div>
                <p class="text-sm text-slate-500 font-medium mb-1">Balance</p>
                <h3 id="kpi-balance" class="text-3xl font-bold text-blue-600">
                    $0
                </h3>
            </div>
        </div>

        <!-- LISTA -->
        <div
            class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
            <div
                class="p-6 border-b border-slate-100 flex justify-between items-center">
                <h3 class="font-bold text-lg text-slate-800">Movimientos</h3>
                <select
                    id="filter-tipo"
                    class="bg-slate-50 border border-slate-200 text-sm rounded-lg px-4 py-2 outline-none">
                    <option value="todos">Todos</option>
                    <option value="ingreso">Ingresos</option>
                    <option value="gasto">Gastos</option>
                </select>
            </div>
            <div id="movimientos-container" class="divide-y divide-slate-100">
                <div class="p-12 text-center text-slate-400">
                    <div class="text-6xl mb-4"></div>
                    <p>Cargando movimientos...</p>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL INGRESO -->
    <div
        id="modal-ingreso"
        class="fixed inset-0 bg-black/60 z-[9999] hidden flex items-center justify-center p-4">
        <div
            class="bg-white rounded-2xl shadow-2xl max-w-lg w-full max-h-[90vh] overflow-y-auto">
            <div
                class="p-6 border-b flex justify-between items-center bg-green-50">
                <h3 class="text-xl font-bold text-slate-900">
                    Registrar Ingreso Manual
                </h3>
                <button
                    id="close-modal-ingreso"
                    class="text-3xl text-slate-400 hover:text-slate-600">&times;</button>
            </div>
            <form id="form-ingreso" class="p-6 space-y-4">
                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Concepto</label>
                    <input
                        type="text"
                        id="ingreso-concepto"
                        required
                        class="w-full p-3 border border-slate-200 rounded-lg outline-none focus:ring-2 focus:ring-green-500"
                        placeholder="Ej: Pago directo Cliente X"
                    />
                </div>
                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Monto</label>
                    <input
                        type="number"
                        id="ingreso-monto"
                        required
                        min="0"
                        class="w-full p-3 border border-slate-200 rounded-lg outline-none focus:ring-2 focus:ring-green-500"
                        placeholder="0"
                    />
                </div>
                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Fecha</label>
                    <input
                        type="date"
                        id="ingreso-fecha"
                        required
                        class="w-full p-3 border border-slate-200 rounded-lg outline-none focus:ring-2 focus:ring-green-500"
                    />
                </div>
                <div class="pt-4 border-t flex gap-3">
                    <button
                        type="submit"
                        class="flex-1 px-6 py-3 bg-green-600 text-white rounded-lg font-bold hover:bg-green-700 transition">Guardar Ingreso</button>
                </div>
            </form>
        </div>
    </div>

    <!-- MODAL GASTO -->
    <div
        id="modal-gasto"
        class="fixed inset-0 bg-black/60 z-[9999] hidden flex items-center justify-center p-4">
        <div
            class="bg-white rounded-2xl shadow-2xl max-w-lg w-full max-h-[90vh] overflow-y-auto">
            <div
                class="p-6 border-b flex justify-between items-center bg-red-50">
                <h3 class="text-xl font-bold text-slate-900">
                    Registrar Gasto
                </h3>
                <button
                    id="close-modal-gasto"
                    class="text-3xl text-slate-400 hover:text-slate-600">&times;</button>
            </div>
            <form id="form-gasto" class="p-6 space-y-4">
                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Concepto</label>
                    <input
                        type="text"
                        id="gasto-concepto"
                        required
                        class="w-full p-3 border border-slate-200 rounded-lg outline-none focus:ring-2 focus:ring-red-500"
                        placeholder="Ej: Servidores"
                    />
                </div>
                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Monto</label>
                    <input
                        type="number"
                        id="gasto-monto"
                        required
                        min="0"
                        class="w-full p-3 border border-slate-200 rounded-lg outline-none focus:ring-2 focus:ring-red-500"
                        placeholder="0"
                    />
                </div>
                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Fecha</label>
                    <input
                        type="date"
                        id="gasto-fecha"
                        required
                        class="w-full p-3 border border-slate-200 rounded-lg outline-none focus:ring-2 focus:ring-red-500"
                    />
                </div>
                <div>
                    <label class="block text-sm font-bold text-slate-700 mb-2">Categora</label>
                    <select
                        id="gasto-categoria"
                        class="w-full p-3 border border-slate-200 rounded-lg outline-none focus:ring-2 focus:ring-red-500">
                        <option value="infraestructura">Infraestructura</option>
                        <option value="marketing">Marketing</option>
                        <option value="personal">Personal</option>
                        <option value="otros">Otros</option>
                    </select>
                </div>
                <div class="pt-4 border-t flex gap-3">
                    <button
                        type="submit"
                        class="flex-1 px-6 py-3 bg-red-600 text-white rounded-lg font-bold hover:bg-red-700 transition">Guardar Gasto</button>
                </div>
            </form>
        </div>
    </div>
</Layout>

<script>
    import { db } from "../../firebase/client";
    import {
        collection,
        query,
        orderBy,
        limit,
        getDocs,
        addDoc,
        Timestamp,
    } from "firebase/firestore";

    const modalIngreso = document.getElementById("modal-ingreso");
    const modalGasto = document.getElementById("modal-gasto");
    const btnAddIncome = document.getElementById("btn-add-income");
    const btnAddExpense = document.getElementById("btn-add-expense");
    const closeIngreso = document.getElementById("close-modal-ingreso");
    const closeGasto = document.getElementById("close-modal-gasto");

    const today = new Date().toISOString().split("T")[0];

    // Listeners
    btnAddIncome?.addEventListener("click", () => {
        (document.getElementById("ingreso-fecha") as HTMLInputElement).value =
            today;
        modalIngreso?.classList.remove("hidden");
    });

    btnAddExpense?.addEventListener("click", () => {
        (document.getElementById("gasto-fecha") as HTMLInputElement).value =
            today;
        modalGasto?.classList.remove("hidden");
    });

    closeIngreso?.addEventListener("click", () =>
        modalIngreso?.classList.add("hidden"),
    );
    closeGasto?.addEventListener("click", () =>
        modalGasto?.classList.add("hidden"),
    );

    // Guardar Ingreso Manual
    document
        .getElementById("form-ingreso")
        ?.addEventListener("submit", async (e) => {
            e.preventDefault();
            const concepto = (
                document.getElementById("ingreso-concepto") as HTMLInputElement
            ).value;
            const monto = parseFloat(
                (document.getElementById("ingreso-monto") as HTMLInputElement)
                    .value,
            );
            const fecha = new Date(
                (document.getElementById("ingreso-fecha") as HTMLInputElement)
                    .value,
            );

            try {
                await addDoc(collection(db, "admin_finanzas"), {
                    tipo: "ingreso",
                    origen: "manual",
                    concepto,
                    monto,
                    fecha: Timestamp.fromDate(fecha),
                    createdAt: Timestamp.now(),
                });
                alert(" Ingreso guardado");
                modalIngreso?.classList.add("hidden");
                (e.target as HTMLFormElement).reset();
                loadData();
            } catch (error) {
                console.error(error);
                alert("Error al guardar");
            }
        });

    // Guardar Gasto
    document
        .getElementById("form-gasto")
        ?.addEventListener("submit", async (e) => {
            e.preventDefault();
            const concepto = (
                document.getElementById("gasto-concepto") as HTMLInputElement
            ).value;
            const monto = parseFloat(
                (document.getElementById("gasto-monto") as HTMLInputElement)
                    .value,
            );
            const fecha = new Date(
                (document.getElementById("gasto-fecha") as HTMLInputElement)
                    .value,
            );
            const categoria = (
                document.getElementById("gasto-categoria") as HTMLInputElement
            ).value;

            try {
                await addDoc(collection(db, "admin_finanzas"), {
                    tipo: "gasto",
                    origen: "manual",
                    concepto,
                    monto,
                    fecha: Timestamp.fromDate(fecha),
                    categoria,
                    createdAt: Timestamp.now(),
                });
                alert(" Gasto guardado");
                modalGasto?.classList.add("hidden");
                (e.target as HTMLFormElement).reset();
                loadData();
            } catch (error) {
                console.error(error);
                alert("Error al guardar");
            }
        });

    // Cargar Datos
    async function loadData() {
        try {
            // 1. Ingresos Automticos (pagos_historial)
            const qAuto = query(
                collection(db, "pagos_historial"),
                orderBy("fecha", "desc"),
                limit(50),
            );
            const snapAuto = await getDocs(qAuto);
            const autos = snapAuto.docs
                .map((doc) => {
                    const d = doc.data();
                    return {
                        id: doc.id,
                        tipo: "ingreso",
                        origen: "auto",
                        concepto: `Pago Plan ${d.plan || ""}`,
                        detalle: d.usuarioId
                            ? `Usuario: ${d.usuarioId.slice(0, 6)}...`
                            : "Sistema",
                        monto: Number(d.monto) || 0,
                        fecha: d.fecha,
                        estado: d.estado,
                    };
                })
                .filter((i) => i.estado === "approved"); // Solo aprobados suman

            // 2. Ingresos/Gastos Manuales (admin_finanzas)
            const qManual = query(
                collection(db, "admin_finanzas"),
                orderBy("fecha", "desc"),
                limit(50),
            );
            const snapManual = await getDocs(qManual);
            const manuals = snapManual.docs.map((doc) => {
                const d = doc.data();
                return {
                    id: doc.id,
                    tipo: d.tipo,
                    origen: "manual",
                    concepto: d.concepto,
                    detalle: d.categoria || "Manual",
                    monto: Number(d.monto) || 0,
                    fecha: d.fecha,
                };
            });

            const all = [...autos, ...manuals].sort((a, b) => {
                const fa = a.fecha?.toMillis
                    ? a.fecha.toMillis()
                    : new Date(a.fecha).getTime();
                const fb = b.fecha?.toMillis
                    ? b.fecha.toMillis()
                    : new Date(b.fecha).getTime();
                return fb - fa;
            });

            // KPIs
            let inc = 0,
                exp = 0;
            all.forEach((m) => {
                if (m.tipo === "ingreso") inc += m.monto;
                else exp += m.monto;
            });

            document.getElementById("kpi-ingresos")!.innerText =
                `$${inc.toLocaleString()}`;
            document.getElementById("kpi-gastos")!.innerText =
                `$${exp.toLocaleString()}`;
            document.getElementById("kpi-balance")!.innerText =
                `$${(inc - exp).toLocaleString()}`;

            renderList(all);
        } catch (e) {
            console.error("Error loading admin finances", e);
        }
    }

    function renderList(items) {
        const container = document.getElementById("movimientos-container");
        if (!container) return;

        container.innerHTML = items
            .map((item) => {
                const dateObj = item.fecha?.toDate
                    ? item.fecha.toDate()
                    : new Date(item.fecha);
                const dateStr = dateObj.toLocaleDateString();
                const color =
                    item.tipo === "ingreso" ? "text-green-600" : "text-red-600";
                const sign = item.tipo === "ingreso" ? "+" : "-";
                const icon = item.tipo === "ingreso" ? "" : "";
                const bg =
                    item.origen === "auto"
                        ? "bg-slate-50 border-l-4 border-indigo-400"
                        : "bg-white";

                return `
                <div class="p-4 ${bg} hover:bg-slate-50 transition flex items-center justify-between">
                    <div class="flex items-center gap-4">
                        <div class="text-2xl">${icon}</div>
                        <div>
                            <p class="font-bold text-slate-800">${item.concepto} <span class="text-xs text-slate-400 font-normal ml-2 border px-1 rounded">${item.origen}</span></p>
                            <p class="text-sm text-slate-500">${dateStr}  ${item.detalle}</p>
                        </div>
                    </div>
                    <div class="font-bold text-lg ${color}">
                        ${sign}$${item.monto.toLocaleString()}
                    </div>
                </div>
            `;
            })
            .join("");
    }

    loadData();
</script>

<style>
    .admin-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
        font-family: "Inter", sans-serif;
        background-color: #f8fafc;
        min-height: 100vh;
    }
</style>

