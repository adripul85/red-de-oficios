---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Configuracin Global - Admin">
    <div class="admin-container">
        <header class="header-config">
            <a href="/admin" class="btn-back"> Volver</a>
            <h1>Configuracin del Sistema </h1>
        </header>

        <div class="config-grid">
            <div class="config-card">
                <h3> Gestin de Giftcard</h3>
                <p class="text-sm text-muted mb-4">
                    Configura el cdigo promocional para regalar planes premium.
                </p>

                <form id="form-giftcard">
                    <div class="form-group">
                        <label>Cdigo Promocional</label>
                        <input
                            type="text"
                            id="giftcard-code"
                            placeholder="Ej: VERANO2026"
                            class="uppercase font-bold tracking-widest"
                            required
                        />
                    </div>

                    <div class="form-group">
                        <label>Duracin (das)</label>
                        <input
                            type="number"
                            id="giftcard-duration"
                            placeholder="60"
                            min="1"
                            required
                        />
                    </div>

                    <div class="form-group">
                        <label>Plan Otorgado</label>
                        <select id="giftcard-plan" required>
                            <option value="mensual">Plan Impulso (Mensual)</option>
                            <option value="profesional">Plan Profesional (90 das)</option>
                            <option value="experto">Plan Experto (Semestral)</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Lmite de Usos (opcional)</label>
                        <input
                            type="number"
                            id="giftcard-max-uses"
                            placeholder="1000 (dejar vaco = ilimitado)"
                            min="1"
                        />
                    </div>

                    <div class="form-group">
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input
                                type="checkbox"
                                id="giftcard-active"
                                class="w-5 h-5"
                            />
                            <span>Cdigo Activo</span>
                        </label>
                    </div>

                    <div class="stats-box">
                        <div class="stat-item">
                            <span class="stat-label">Usos Actuales:</span>
                            <span id="current-uses" class="stat-value">0</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-label">Creado:</span>
                            <span id="created-date" class="stat-value">-</span>
                        </div>
                    </div>

                    <button
                        type="submit"
                        class="btn-action"
                        style="background: #9333ea;">
                         Guardar Configuracin
                    </button>
                </form>
            </div>

            <div class="config-card">
                <h3> Precios de Planes</h3>
                <form id="form-precios">
                    <div class="form-group">
                        <label>Plan Impulso (Mensual) ($)</label>
                        <input
                            type="number"
                            id="price-monthly"
                            placeholder="30000"
                            required
                        />
                    </div>
                    <div class="form-group">
                        <label>Plan Profesional (90 das) ($)</label>
                        <input
                            type="number"
                            id="price-professional"
                            placeholder="90000"
                            required
                        />
                    </div>
                    <div class="form-group">
                        <label>Plan Experto (Semestral) ($)</label>
                        <input
                            type="number"
                            id="price-semestral"
                            placeholder="150000"
                            required
                        />
                    </div>
                    <button type="submit" class="btn-action">Guardar Precios</button>
                </form>
            </div>

            <div class="config-card">
                <h3> Aviso Global (Banner)</h3>
                <p class="text-sm text-muted mb-4">
                    Configura un mensaje que aparecer en la parte superior de
                    todo el sitio.
                </p>
                <form id="form-aviso">
                    <div class="form-group">
                        <label>Mensaje del Banner</label>
                        <textarea
                            id="aviso-message"
                            placeholder="Ej: Nuevo sistema de puntos activo!"
                            class="w-full p-3 border rounded-lg h-24 bg-white dark:bg-slate-800 border-slate-300 dark:border-slate-600"
                            required></textarea>
                    </div>
                    <div class="form-group">
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input
                                type="checkbox"
                                id="aviso-active"
                                class="w-5 h-5"
                            />
                            <span>Banner Activo</span>
                        </label>
                    </div>
                    <button
                        type="submit"
                        class="btn-action"
                        style="background: #f97316;">
                         Actualizar Banner
                    </button>
                </form>
            </div>
        </div>
    </div>
</Layout>

<script>
    import { db, auth } from "../../firebase/client";
    import { doc, getDoc, setDoc } from "firebase/firestore";
    import { onAuthStateChanged } from "firebase/auth";

    document.addEventListener("astro:page-load", () => {
        console.log(" [ADMIN-CONFIG] Pgina cargada/navegada");

        onAuthStateChanged(auth, async (user) => {
            if (!user) {
                console.warn(" [ADMIN-CONFIG] No hay usuario autenticado");
                window.location.href = "/admin/login";
            } else {
                console.log(" [ADMIN-CONFIG] Usuario autenticado:", user.uid);
                loadConfig();
            }
        });

        async function loadConfig() {
            console.log(" [ADMIN-CONFIG] Iniciando loadConfig...");
            const user = auth.currentUser;
            if (user) {
                try {
                    const snap = await getDoc(
                        doc(db, "profesionales", user.uid),
                    );
                    const data = snap.data();
                    console.log(
                        " [ADMIN-CONFIG] Perfil data completo:",
                        data,
                    );
                    if (data) {
                        console.log(" [ADMIN-CONFIG] Rol field:", data.rol);
                        console.log(" [ADMIN-CONFIG] Role field:", data.role);
                    }
                } catch (e: any) {
                    console.error(" [ADMIN-CONFIG] Error leyendo perfil:", e);
                }
            }
            try {
                // Cargar configuracin del giftcard
                const giftcardRef = doc(db, "configuracion", "giftcard");
                const giftcardSnap = await getDoc(giftcardRef);

                if (giftcardSnap.exists()) {
                    const data = giftcardSnap.data();
                    // @ts-ignore
                    document.getElementById("giftcard-code").value =
                        data.codigo || "";
                    // @ts-ignore
                    document.getElementById("giftcard-duration").value =
                        data.duracionDias || 60;
                    // @ts-ignore
                    document.getElementById("giftcard-plan").value =
                        data.planOtorgado || "experto";
                    // @ts-ignore
                    document.getElementById("giftcard-max-uses").value =
                        data.maxUsos || "";
                    // @ts-ignore
                    document.getElementById("giftcard-active").checked =
                        data.activo || false;
                    // @ts-ignore
                    document.getElementById("current-uses").innerText =
                        data.usos || 0;

                    if (data.fechaCreacion) {
                        const fecha = data.fechaCreacion.toDate();
                        // @ts-ignore
                        document.getElementById("created-date").innerText =
                            fecha.toLocaleDateString();
                    }
                }

                // Cargar precios
                const generalRef = doc(db, "configuracion", "general");
                const generalSnap = await getDoc(generalRef);

                if (generalSnap.exists()) {
                    const data = generalSnap.data();
                    // @ts-ignore
                    if (data.price_monthly)
                        (
                            document.getElementById(
                                "price-monthly",
                            ) as HTMLInputElement
                        ).value = data.price_monthly;
                    if (data.price_professional)
                        (
                            document.getElementById(
                                "price-professional",
                            ) as HTMLInputElement
                        ).value = data.price_professional;
                    if (data.price_semestral)
                        (
                            document.getElementById(
                                "price-semestral",
                            ) as HTMLInputElement
                        ).value = data.price_semestral;
                }

                // Cargar aviso global
                const avisoRef = doc(db, "configuracion", "aviso_global");
                const avisoSnap = await getDoc(avisoRef);

                if (avisoSnap.exists()) {
                    const data = avisoSnap.data();
                    // @ts-ignore
                    document.getElementById("aviso-message").value =
                        data.mensaje || "";
                    // @ts-ignore
                    document.getElementById("aviso-active").checked =
                        data.activo || false;
                }
            } catch (e: any) {
                console.error(" [ADMIN-CONFIG] Error en loadConfig:", e);
                console.error(" [ADMIN-CONFIG] Cdigo:", e.code);
                console.error(" [ADMIN-CONFIG] Mensaje:", e.message);
            }
        }

        // Guardar Giftcard
        document
            .getElementById("form-giftcard")
            ?.addEventListener("submit", async (e) => {
                e.preventDefault();
                // @ts-ignore
                const code = (
                    document.getElementById("giftcard-code") as HTMLInputElement
                ).value
                    .trim()
                    .toUpperCase();
                const duration = parseInt(
                    (
                        document.getElementById(
                            "giftcard-duration",
                        ) as HTMLInputElement
                    ).value,
                );
                // @ts-ignore
                const plan = (
                    document.getElementById(
                        "giftcard-plan",
                    ) as HTMLSelectElement
                ).value;
                const maxUses = (
                    document.getElementById(
                        "giftcard-max-uses",
                    ) as HTMLInputElement
                ).value;
                const active = (
                    document.getElementById(
                        "giftcard-active",
                    ) as HTMLInputElement
                ).checked;

                if (code.length < 3)
                    return alert("Cdigo muy corto (mnimo 3 caracteres)");
                if (duration < 1)
                    return alert("Duracin debe ser al menos 1 da");

                try {
                    const giftcardData: any = {
                        codigo: code,
                        duracionDias: duration,
                        planOtorgado: plan,
                        activo: active,
                        fechaCreacion: new Date(),
                    };

                    // Solo agregar maxUsos si tiene valor
                    if (maxUses && parseInt(maxUses) > 0) {
                        giftcardData.maxUsos = parseInt(maxUses);
                    }

                    // Preservar el contador de usos actual
                    const currentDoc = await getDoc(
                        doc(db, "configuracion", "giftcard"),
                    );
                    if (currentDoc.exists()) {
                        giftcardData.usos = currentDoc.data().usos || 0;
                    } else {
                        giftcardData.usos = 0;
                    }

                    await setDoc(
                        doc(db, "configuracion", "giftcard"),
                        giftcardData,
                        { merge: true },
                    );

                    alert(
                        ` Giftcard actualizado:\n\nCdigo: ${code}\nDuracin: ${duration} das\nPlan: ${plan}\nActivo: ${active ? "S" : "No"}`,
                    );
                    loadConfig(); // Recargar para mostrar datos actualizados
                } catch (e: any) {
                    console.error(
                        " [ADMIN-CONFIG] Error guardando giftcard:",
                        e,
                    );
                    console.error(" [ADMIN-CONFIG] Cdigo error:", e.code);
                    console.error(
                        " [ADMIN-CONFIG] Mensaje error:",
                        e.message,
                    );
                    alert(
                        `Error guardando giftcard: ${e.message || "Error desconocido"}`,
                    );
                }
            });

        document
            .getElementById("form-precios")
            ?.addEventListener("submit", async (e) => {
                e.preventDefault();
                const monthlyEl = document.getElementById(
                    "price-monthly",
                ) as HTMLInputElement;
                const professionalEl = document.getElementById(
                    "price-professional",
                ) as HTMLInputElement;
                const semestralEl = document.getElementById(
                    "price-semestral",
                ) as HTMLInputElement;

                const monthly = monthlyEl ? monthlyEl.value : "";
                const professional = professionalEl ? professionalEl.value : "";
                const semestral = semestralEl ? semestralEl.value : "";
                try {
                    await setDoc(
                        doc(db, "configuracion", "general"),
                        {
                            price_monthly: monthly,
                            price_professional: professional,
                            price_semestral: semestral,
                        },
                        { merge: true },
                    );
                    alert(" Precios actualizados");
                } catch (e) {
                    alert("Error guardando precios");
                }
            });

        document
            .getElementById("form-aviso")
            ?.addEventListener("submit", async (e) => {
                e.preventDefault();
                // @ts-ignore
                const message = document.getElementById("aviso-message").value;
                // @ts-ignore
                const active = document.getElementById("aviso-active").checked;

                try {
                    await setDoc(
                        doc(db, "configuracion", "aviso_global"),
                        {
                            mensaje: message,
                            activo: active,
                            updatedAt: new Date(),
                        },
                        { merge: true },
                    );
                    alert(" Banner actualizado correctamente");
                } catch (e) {
                    console.error(e);
                    alert("Error guardando el banner");
                }
            });
    }); // End of astro:page-load
</script>

<style>
    .admin-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 40px 20px;
        font-family: "Inter", sans-serif;
    }
    .header-config {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 40px;
    }
    .btn-back {
        text-decoration: none;
        color: #64748b;
        font-weight: bold;
        padding: 8px 16px;
        background: #f1f5f9;
        border-radius: 8px;
        transition: 0.2s;
    }
    .btn-back:hover {
        background: #e2e8f0;
        color: #1e293b;
    }
    h1 {
        font-size: 2rem;
        color: #1e293b;
        margin: 0;
    }

    .config-grid {
        display: grid;
        grid-template-cols: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
    }
    .config-card {
        background: white;
        border-radius: 16px;
        padding: 30px;
        border: 1px solid #e2e8f0;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    }
    .config-card h3 {
        margin-top: 0;
        color: #334155;
        font-size: 1.25rem;
        margin-bottom: 10px;
        border-bottom: 2px solid #f1f5f9;
        padding-bottom: 10px;
    }
    .text-muted {
        color: #64748b;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }
    .form-group label {
        display: block;
        font-weight: 600;
        color: #475569;
        margin-bottom: 8px;
        font-size: 0.9rem;
    }
    input {
        width: 100%;
        padding: 12px;
        border: 1px solid #cbd5e1;
        border-radius: 8px;
        font-size: 1rem;
        transition: 0.2s;
        outline: none;
    }
    input:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .btn-action {
        width: 100%;
        padding: 12px;
        background: #3b82f6;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.2s;
    }
    .btn-action:hover {
        opacity: 0.9;
        transform: translateY(-1px);
    }

    select {
        width: 100%;
        padding: 12px;
        border: 1px solid #cbd5e1;
        border-radius: 8px;
        font-size: 1rem;
        transition: 0.2s;
        outline: none;
        background: white;
        cursor: pointer;
    }
    select:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .stats-box {
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        padding: 16px;
        margin-bottom: 20px;
    }
    .stat-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 0;
    }
    .stat-item:not(:last-child) {
        border-bottom: 1px solid #e2e8f0;
    }
    .stat-label {
        font-size: 0.875rem;
        color: #64748b;
        font-weight: 500;
    }
    .stat-value {
        font-size: 1rem;
        color: #1e293b;
        font-weight: bold;
    }

    .flex {
        display: flex;
    }
    .items-center {
        align-items: center;
    }
    .gap-2 {
        gap: 0.5rem;
    }
    .cursor-pointer {
        cursor: pointer;
    }
    .w-5 {
        width: 1.25rem;
    }
    .h-5 {
        height: 1.25rem;
    }
</style>

