---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* DEFINICIÓN DE COLORES (Aquí ocurre la magia) */
  :root {
    /* --- PALETA B: MANOS A LA OBRA --- */
   --color-primary: #111111;    
    --color-secondary: #000000;  
    --color-accent: #FFD700;     
    --color-bg: #EAEAEA;         
    --color-card-bg: #ffffff;    
    --color-text: #222222;       
    --color-border: #999999
  }

  /* RESET Y ESTILOS GLOBALES */
  html {
    background-color: var(--color-bg);
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Segoe UI', system-ui, sans-serif; /* Fuente más moderna */
    margin: 0;
    padding: 0;
    color: var(--color-text);
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1;
  }

  /* APLICANDO VARIABLES A COMPONENTES GLOBALES */
  
  /* Botones Primarios (Buscador, Alta) */
  button, .btn-pro, .btn-buscar {
    background-color: var(--color-primary) !important;
    color: white !important;
    border: none;
  }
  button:hover, .btn-pro:hover {
    filter: brightness(1.1); /* Efecto brillo al pasar mouse */
  }

  /* Enlaces y Textos destacados */
  a { color: var(--color-primary); }
  
  /* Tarjetas */
  .card, .card-pro, .card-link {
    background-color: var(--color-card-bg) !important;
    border: 1px solid var(--color-border) !important;
  }

  /* Header y Footer (Usamos el secundario para contraste) */
  header {
    background-color: var(--color-card-bg) !important;
    border-bottom: 1px solid var(--color-border) !important;
  }
  .logo { color: var(--color-secondary) !important; }
  
  footer {
    background-color: var(--color-secondary) !important;
    color: white !important;
  }
  
  /* Hero Section (Fondo suave) */
  .hero {
    background-color: var(--color-bg) !important;
  }
  
  /* Iconos */
  .icon, .icon-big {
    filter: drop-shadow(0 2px 2px rgba(0,0,0,0.1));
  }
</style>