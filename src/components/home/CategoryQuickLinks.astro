<script>
  // Script que corre en el cliente para aleatorizar
  document.addEventListener("astro:page-load", () => {
    const dataDiv = document.getElementById("rubros-data");
    const container = document.getElementById("random-container");

    if (!dataDiv || !container) return;

    const rawData = dataDiv.dataset.list;
    if (!rawData) return;

    const allRubros = JSON.parse(rawData);

    // MEZCLAR
    const shuffled = allRubros.sort(() => Math.random() - 0.5);

    // TOMAR 6
    const selected = shuffled.slice(0, 6);

    // GENERAR HTML
    const cardsHTML = selected
      .map(
        (cat: any) => `
      <a href="/resultados?q=${encodeURIComponent(cat.slug)}" class="category-card fade-in">
        <span class="icon">${cat.icon}</span>
        <span class="name">${cat.nombre}</span>
      </a>
    `,
      )
      .join("");

    const viewAllHTML = `
      <a href="/resultados" class="category-card view-all fade-in">
        <span class="icon">ðŸ“š</span>
        <span class="name">Ver todos los Rubros</span>
      </a>
    `;

    container.innerHTML = cardsHTML + viewAllHTML;
  });

  // Fallback por si no usas View Transitions
  document.addEventListener("DOMContentLoaded", () => {
    document.dispatchEvent(new Event("astro:page-load"));
  });
</script>

<style>
  .quick-links-section {
    padding: 40px 0;
    background: #ffffff;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-title {
    font-size: 1.5rem;
    color: #1f2937;
    margin-bottom: 25px;
    font-weight: 700;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
    gap: 15px;
    min-height: 200px;
  }

  /* ESTILOS GLOBALES PARA ELEMENTOS INYECTADOS */
  :global(.category-card) {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 20px 10px;
    text-decoration: none;
    transition: all 0.2s ease;
    cursor: pointer;
    height: 100%;
    min-height: 110px;
    animation: fadeIn 0.5s ease-in-out;
  }

  :global(.category-card:hover) {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
    border-color: #e67e22;
    background: white;
  }

  :global(.category-card .icon) {
    font-size: 2rem;
    margin-bottom: 10px;
  }

  :global(.category-card .name) {
    color: #4b5563;
    font-weight: 600;
    font-size: 0.85rem; /* Ajustado para nombres largos */
    text-align: center;
    line-height: 1.2;
  }

  :global(.view-all) {
    background: #fff7ed !important;
    border-color: #ffedd5 !important;
  }
  :global(.view-all .name) {
    color: #ea580c !important;
  }
  :global(.view-all:hover) {
    background: #ffedd5 !important;
    border-color: #ea580c !important;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(5px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 600px) {
    .categories-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 10px;
    }
    :global(.category-card) {
      padding: 15px 5px;
      min-height: 90px;
    }
    :global(.category-card .icon) {
      font-size: 1.5rem;
      margin-bottom: 5px;
    }
    :global(.category-card .name) {
      font-size: 0.7rem;
    }
  }
</style>
