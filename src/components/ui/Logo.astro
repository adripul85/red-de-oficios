<svg 
  width="40" 
  height="40" 
  viewBox="0 0 100 100" 
  fill="none" 
  xmlns="http://www.w3.org/2000/svg"
class="logo-svg"
>
  <path 
    d="M50 25 L20 70 H80 L50 25Z" 
    stroke="var(--color-primary)" 
    stroke-width="8" 
    stroke-linejoin="round" 
    stroke-linecap="round"
    class="network-lines"
  />

  <circle cx="50" cy="25" r="14" fill="var(--color-secondary)"/>
  <circle cx="20" cy="70" r="14" fill="var(--color-secondary)"/>
  <circle cx="80" cy="70" r="14" fill="var(--color-secondary)"/>

  <circle cx="50" cy="25" r="6" fill="white"/>
  <circle cx="20" cy="70" r="6" fill="white"/>
  <circle cx="80" cy="70" r="6" fill="white"/>

</svg>

<style>
  .logo-svg {
/* Un pequeño filtro para darle profundidad */
    filter: drop-shadow(0 2px 2px rgba(0,0,0,0.1));
  }

  /* Animación opcional: al pasar el mouse, las líneas de la red brillan */
  .logo-svg:hover .network-lines {
    stroke: #0707; /* Cambia al color dorado/ámbar */
    transition: stroke 0.3s ease;
  }
</style>
