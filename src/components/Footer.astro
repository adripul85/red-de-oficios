<style>
  .site-footer {
    background: #1f2937;
    color: #d1d5db;
    padding: 60px 20px 20px;
    margin-top: auto;
    position: relative;
    z-index: 20;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* Force 4 columns on desktop */
    gap: 30px;
    margin-bottom: 40px;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: repeat(2, 1fr); /* 2 cols on tablet */
    }
  }

  @media (max-width: 480px) {
    .footer-content {
      grid-template-columns: 1fr; /* 1 col on mobile */
      text-align: center;
    }
  }

  .footer-col h3 {
    color: white;
    font-size: 1.5rem;
    margin-bottom: 20px;
  }
  .dot {
    color: #ea580c; /* Orange-600 to match theme */
  }
  .footer-col p {
    line-height: 1.6;
    font-size: 0.9rem;
    color: #9ca3af;
  }

  .footer-col h4 {
    color: white;
    margin-bottom: 24px;
    font-size: 1.1rem;
    font-weight: 700;
  }

  .footer-col ul {
    list-style: none;
    padding: 0;
  }
  .footer-col li {
    margin-bottom: 10px;
  }
  .footer-col a {
    color: #9ca3af;
    text-decoration: none;
    transition: 0.2s;
  }
  .footer-col a:hover {
    color: #e67e22;
  }

  .footer-bottom {
    border-top: 1px solid #374151;
    padding-top: 20px;
    text-align: center;
    font-size: 0.9rem;
    color: #6b7280;
  }

  /* Newsletter Styles */
  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .newsletter-form input {
    background: #374151;
    border: 1px solid #4b5563;
    color: white;
    padding: 10px 15px;
    border-radius: 8px;
    outline: none;
    font-size: 0.9rem;
  }
  .newsletter-form button {
    background: #ea580c;
    color: white;
    border: none;
    padding: 10px;
    border-radius: 8px;
    font-weight: bold;
    cursor: pointer;
    transition: 0.2s;
  }
  .newsletter-form button:hover {
    background: #f97316;
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const form = document.getElementById("newsletter-form");
    const emailInput = document.getElementById("newsletter-email");
    const status = document.getElementById("newsletter-status");

    form?.addEventListener("submit", async (e) => {
      e.preventDefault();
      // @ts-ignore
      const email = emailInput?.value;
      if (!email) return;

      const btn = form.querySelector("button");
      if (btn) btn.disabled = true;

      try {
        const res = await fetch("/api/newsletter", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ email }),
        });
        const data = await res.json();

        if (status) {
          status.classList.remove("hidden");
          if (data.success) {
            status.textContent = "‚úÖ ¬°Gracias por suscribirte!";
            status.className = "text-xs mt-2 text-green-400";
            // @ts-ignore
            form.reset();
          } else {
            status.textContent = "‚ùå " + (data.error || "Ocurri√≥ un error");
            status.className = "text-xs mt-2 text-red-400";
          }
        }
      } catch (err) {
        if (status) {
          status.textContent = "‚ùå Error de conexi√≥n";
          status.className = "text-xs mt-2 text-red-400";
        }
      } finally {
        if (btn) btn.disabled = false;
      }
    });
  });
</script>
