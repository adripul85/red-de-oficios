<div id="tab-datos" class="tab-content block">
    <!-- Fila 1: Nombres -->
    <div class="grid md:grid-cols-2 gap-6 mb-6">
        <div>
            <label class="label-input">Nombre y Apellido</label>
            <input
                type="text"
                id="nombre"
                class="input-field"
                placeholder="Tu nombre real"
            />
        </div>
        <div>
            <label class="label-input flex justify-between items-center">
                <span>Nombre de Fantasa</span>
                <span class="text-[10px] text-gray-400 font-normal">(Opcional)</span>
            </label>
            <input
                type="text"
                id="nombre_fantasia"
                class="input-field"
                placeholder="Ej: Plomera El Rayo"
            />
        </div>
    </div>

    <!-- Fila 2: Identificacin y Matrcula -->
    <div class="grid md:grid-cols-2 gap-6 mb-6">
        <div>
            <label class="label-input">CUIT / CUIL</label>
            <input
                type="text"
                id="cuit"
                class="input-field"
                placeholder="20-12345678-9"
            />
        </div>
        <div>
            <label class="label-input">N Matrcula</label>
            <input
                type="text"
                id="numero_matricula"
                class="input-field"
                placeholder="Ej: 12345"
            />
        </div>
    </div>

    <!-- Fila 3: Rubro y Zona -->
    <div class="grid md:grid-cols-2 gap-6 mb-6">
        <div>
            <label class="label-input">Rubro Principal</label>
            <select id="rubro_principal" class="input-field bg-white"></select>
        </div>
        <div>
            <label class="label-input">Zona / Provincia</label>
            <select id="zona" class="input-field bg-white"></select>
        </div>
    </div>

    <!-- Fila 4: Contacto y Direccin -->
    <div class="grid md:grid-cols-2 gap-6 mb-6">
        <div>
            <label class="label-input">WhatsApp</label>
            <div class="relative">
                <span class="absolute left-3 top-3 text-gray-500 text-sm"> +54 9</span>
                <input
                    type="text"
                    id="telefono"
                    class="input-field pl-24"
                    placeholder="11 1234 5678"
                />
            </div>
        </div>
        <div class="form-group relative">
            <label class="label-input flex justify-between">
                <span>Direccin Exacta (Se autocompleta)</span>
                <span id="geo-status" class="text-xs text-gray-400">Sin ubicacin</span>
            </label>
            <div class="relative">
                <span class="absolute left-3 top-3"></span>
                <input
                    type="text"
                    id="direccion_input"
                    class="input-field pl-10"
                    placeholder="Escribe calle y altura..."
                    autocomplete="off"
                />
            </div>
            <ul
                id="geo-suggestions"
                class="absolute z-50 w-full bg-white border border-gray-200 rounded-lg shadow-lg mt-1 hidden max-h-48 overflow-y-auto">
            </ul>
            <input type="hidden" id="latitud" />
            <input type="hidden" id="longitud" />
        </div>
    </div>

    <div class="mb-6">
        <label class="label-input flex justify-between items-center">
            <span>Biografa / Descripcin</span>
            <button
                type="button"
                id="btn-ai-bio"
                class="text-[10px] bg-indigo-100 text-indigo-700 px-2 py-1 rounded flex items-center gap-1 hover:bg-indigo-200 transition">
                <span></span> Mejorar con IA
            </button>
        </label>
        <textarea
            id="descripcion"
            rows="4"
            class="input-field"
            placeholder="Cuenta tu experiencia, cmo trabajas, horarios de atencin, etc..."></textarea>
    </div>
    <div class="mb-4">
        <label class="label-input">Etiquetas (Especialidades)</label>
        <div class="flex gap-2 mb-2">
            <input
                type="text"
                id="tag-input"
                class="input-field"
                placeholder="Ej: urgencias, matriculado..."
            /><button
                type="button"
                id="btn-add-tag"
                class="bg-gray-800 text-white px-4 rounded-lg font-bold hover:bg-black transition">Agregar +</button>
        </div>
        <div id="tags-container" class="flex flex-wrap gap-2"></div>
    </div>
    <div
        class="flex items-center gap-3 bg-green-50 p-4 rounded-lg border border-green-100">
        <input
            type="checkbox"
            id="es_24hs"
            class="w-5 h-5 text-green-600 rounded"
        /><div>
            <p class="font-bold text-gray-800 text-sm"> Servicio 24hs</p><p
                class="text-xs text-gray-500">
                Aparecers en bsquedas de urgencia.
            </p>
        </div>
    </div>
    <input type="hidden" id="foto-url" />
</div>

