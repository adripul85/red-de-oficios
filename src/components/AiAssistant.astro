                         `;
                        messagesContainer?.appendChild(div);
                        scrollToBottom();

                        chatState = "done";
                    }, 1500);
                }, 1500);
            }, 1000);
        } else if (chatState === "done") {
            // Keep disabled or offer reset?
            input.placeholder = "Chat finalizado";
