<script>
    const btnToggle = document.getElementById("btn-ai-toggle");
    const btnClose = document.getElementById("btn-close-chat");
    const chatWindow = document.getElementById("ai-chat-window");
    const iconSparkle = document.getElementById("ai-icon-sparkle");
    const iconClose = document.getElementById("ai-icon-close");
    const form = document.getElementById("ai-form");
    // @ts-ignore
    const input = document.getElementById("ai-input") as HTMLInputElement;
    const messagesContainer = document.getElementById("ai-messages");

    let isOpen = false;

    function toggleChat() {
        isOpen = !isOpen;
        if (isOpen) {
            // Open
            chatWindow?.classList.remove("hidden");
            // Small delay to allow display:flex to apply before transition
            setTimeout(() => {
                chatWindow?.classList.add("chat-open");
                input?.focus();
            }, 10);

            // Icon transformation
            iconSparkle?.classList.add("hidden");
            iconClose?.classList.remove("hidden");

            // Hide tooltip permanently after first open
            document.getElementById("ai-tooltip")?.classList.add("!hidden");
        } else {
            // Close
            chatWindow?.classList.remove("chat-open");
            setTimeout(() => {
                chatWindow?.classList.add("hidden");
            }, 300); // Wait for transition

            // Icon transformation
            iconSparkle?.classList.remove("hidden");
            iconClose?.classList.add("hidden");
        }
    }

    btnToggle?.addEventListener("click", toggleChat);
    btnClose?.addEventListener("click", toggleChat);

    // State Management
    let chatState = "idle"; // idle, waiting_problem, waiting_zone, done
    let context = { problem: "", zone: "" };

    // Mock Response Logic
    form?.addEventListener("submit", (e) => {
        e.preventDefault();
        const text = input.value.trim();
        if (!text) return;

        // 1. Add User Message
        addUserMessage(text);
        input.value = "";

        // Disable input to prevent race conditions
        input.disabled = true;
        input.placeholder = "Escribiendo...";

        // 2. Mock AI Thinking & Response
        showTypingIndicator();

        setTimeout(() => {
            removeTypingIndicator();
            handleAiResponse(text);
        }, 1500);
    });

    function handleAiResponse(text: string) {
        const lowerText = text.toLowerCase();

        if (chatState === "idle" || chatState === "waiting_problem") {
            // Basic Keyword Detection
            context.problem = text;

            if (
                lowerText.includes("agua") ||
                lowerText.includes("gotera") ||
                lowerText.includes("caÃ±o")
            ) {
                addAiMessage("Parece ser un problema de **plomerÃ­a**. ðŸ”§");
            } else if (
                lowerText.includes("luz") ||
                lowerText.includes("enchufe") ||
                lowerText.includes("cortocircuito")
            ) {
                addAiMessage("Entiendo, es un tema **elÃ©ctrico**. âš¡");
            } else if (
                lowerText.includes("gas") ||
                lowerText.includes("estufa")
            ) {
                addAiMessage("PodrÃ­a ser algo de **gas**. Es delicado. ðŸ”¥");
            } else {
                addAiMessage(
                    "Entiendo. Vamos a buscar al experto ideal para esto.",
                );
            }

            // Ask for Zone
            setTimeout(() => {
                showTypingIndicator();
                setTimeout(() => {
                    removeTypingIndicator();
                    addAiMessage(
                        "Para buscar cercanÃ­a: **Â¿En quÃ© barrio o zona estÃ¡s?** ðŸ“",
                    );
                    chatState = "waiting_zone";

                    // Re-enable input
                    input.disabled = false;
                    input.placeholder = "Ej: Palermo, Centro...";
                    input.focus();
                }, 1000);
            }, 800);
        } else if (chatState === "waiting_zone") {
            context.zone = text;
            addAiMessage(`Perfecto, buscando en **${text}**... ðŸ”`);

