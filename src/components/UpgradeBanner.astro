---
interface Props {
    planRequired: "impulso" | "experto";
    feature: string;
}

const { planRequired, feature } = Astro.props;
---

<div class="upgrade-banner">
    <div class="banner-content">
        <span class="banner-icon">ðŸ’Ž</span>
        <div class="banner-text">
            <strong>{feature}</strong>
            <span
                >Disponible en Plan {
                    planRequired === "experto" ? "Experto" : "Impulso"
                }</span
            >
        </div>
        <a href="/planes" class="banner-cta"> Ver Planes â†’ </a>
    </div>
</div>

<style>
    .upgrade-banner {
        background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
        border: 2px dashed #ff8a00;
        border-radius: 12px;
        padding: 1rem;
        margin: 1rem 0;
    }

    .banner-content {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .banner-icon {
        font-size: 2rem;
    }

    .banner-text {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .banner-text strong {
        color: #1e293b;
        font-size: 0.95rem;
    }

    .banner-text span {
        color: #64748b;
        font-size: 0.85rem;
    }

    .banner-cta {
        padding: 0.5rem 1rem;
        background: #ff8a00;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.9rem;
        white-space: nowrap;
        transition: background 0.2s;
    }

    .banner-cta:hover {
        background: #ff6b00;
    }
</style>
