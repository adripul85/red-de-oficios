rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES DE AYUDA ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Verifica si el usuario actual es el dueño del documento
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    
    // Verifica si es Admin o Moderador leyendo su perfil de profesional
    function isStaff() {
       return isSignedIn() && (
         request.auth.uid == 'oZ6sEtoOHhXGnOlrK9v2LssFDex2' ||
         exists(/databases/$(database)/documents/profesionales/$(request.auth.uid)) &&
         (
           get(/databases/$(database)/documents/profesionales/$(request.auth.uid)).data.get('rol', 'profesional').lower() in ['admin', 'moderador', 'moderator', 'administrador'] ||
           get(/databases/$(database)/documents/profesionales/$(request.auth.uid)).data.get('role', 'profesional').lower() in ['admin', 'moderador', 'moderator', 'administrador']
         )
       );
    }

    // --- 1. PERFILES DE PROFESIONALES ---
    match /profesionales/{userId} {
      // Todo el mundo puede ver los perfiles
      allow read: if true;
      
      // Crear: Solo el dueño al registrarse
      allow create: if isOwner(userId);
      
      // Actualizar: 
      // 1. El dueño (sus datos propios).
      // 2. El Admin (para verificar cuentas, cambiar planes, etc).
      // 3. Contadores automáticos (likes, vistas) permitidos a usuarios logueados.
      allow update: if isOwner(userId) || isStaff() || (
        isSignedIn() && 
        request.resource.data.diff(resource.data).affectedKeys()
        .hasOnly(['promedio', 'total_votos', 'puntuacion', 'total_valoraciones', 'suma_puntuacion', 'vistas_perfil', 'contactos_whatsapp', 'likes', 'portfolio', 'servicios_lista'])
      );
      
      // Borrar: Solo Admin
      allow delete: if isStaff();
      
      // Subcolección de Reseñas
      match /resenas/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow delete: if isStaff() || (isSignedIn() && request.auth.uid == resource.data.clienteId);
      }


      // Presupuestos
      match /presupuestos/{presupuestoId} {
        allow read, write: if isOwner(userId);
      }

      // Mi Equipo
      match /equipo/{memberId} {
        allow read, write: if isOwner(userId);
      }

      // Clientes
      match /clientes/{clientId} {
        allow read, write: if isOwner(userId);
      }

      // Finanzas
      match /finanzas/{transactionId} {
        allow read, write: if isOwner(userId);
      }

      // Derivaciones
      match /derivaciones/{derivacionId} {
        allow read, write: if isOwner(userId);
      }

      // Notificaciones
      match /notificaciones/{notificationId} {
        allow read, update, delete: if isOwner(userId);
        allow create: if true; // Permitir que el sistema o usuarios creen notificaciones
      }

      // Tokens FCM (Push Notifications)
      match /fcmTokens/{tokenId} {
        allow read, write: if isOwner(userId);
      }


      // Códigos de Seguridad
      match /codigos/{codigoId} {
        // Get individual code: Professional or client owner
        allow get: if isOwner(userId) || (isSignedIn() && resource.data.clienteId == request.auth.uid);
        // List/query codes: Professional can list their own, client can list all (will filter by clienteId in query)
        allow list: if isOwner(userId) || isSignedIn();
        // Client can create a code when accepting a quote
        allow create: if isSignedIn();
        // Professional, client owner, or admin can update/delete
        allow update, delete: if isOwner(userId) || (isSignedIn() && resource.data.clienteId == request.auth.uid) || isStaff();
      }
    }

    // --- 2. CLIENTES ---
    match /clientes/{userId} {
      allow read, write: if isOwner(userId) || isStaff();

      // Favoritos del cliente
      match /favoritos/{docId} {
        allow read, write: if isOwner(userId);
      }

      // Notificaciones de cliente
      match /notificaciones/{notificationId} {
        allow read, update, delete: if isOwner(userId);
        allow create: if isSignedIn(); // Permitir que profesionales o el sistema creen
      }

      // Tokens FCM (Push Notifications) del cliente
      match /fcmTokens/{tokenId} {
        allow read, write: if isOwner(userId);
      }
    }

    // --- 3. FORO (COMUNIDAD) ---
    // Threads (Temas principales)
    match /foro_threads/{threadId} {
      allow read: if true; // Todos ven (sin orderBy para permitir posts viejos)
      allow create: if isSignedIn(); // Logueados crean
      // Solo el autor o el Admin pueden editar/borrar
      allow update, delete: if isStaff() || (isSignedIn() && request.auth.uid == resource.data.authorId);
    }
    
    // Posts (Respuestas)
    match /foro_posts/{postId} {
      allow read: if true; // Todos ven (sin orderBy para permitir posts viejos)
      allow create: if isSignedIn();
      // Solo el autor o el Admin pueden editar/borrar
      allow update, delete: if isStaff() || (isSignedIn() && request.auth.uid == resource.data.authorId);
    }

    // --- 4. MENSAJERÍA Y REPORTES (PARA EL ADMIN PANEL) ---
    // Mensajes de contacto desde la web (formulario de contacto)
    match /mensajes_web/{msgId} {
      allow create: if true; // Cualquiera puede enviar mensaje
      allow read, update, delete: if isStaff(); // Solo admin/moderador puede leer
    }
    
    // Reportes de perfiles (denuncias de usuarios)
    match /reportes_perfiles/{reportId} {
      allow create: if isSignedIn(); // Usuarios logueados pueden reportar
      allow read, update: if isStaff(); // Solo admin/moderador puede ver y gestionar
    }
    
    // Solicitudes de validación (si usas una aparte de 'profesionales')
    match /solicitudes_validacion/{solicitudId} {
      allow create: if isSignedIn();
      allow read, write: if isStaff();
    }

    // --- 5. PERMITIR collectionGroup en resenas y reseñas ---
    match /{path=**}/resenas/{reviewId} {
      allow read: if true;
    }
    // match /{path=**}/reseñas/{reviewId} {
    //   allow read: if true;
    // }


    // --- 6. OTROS ---
    match /blog/{postId} { 
      allow read: if true; 
      allow write: if isStaff(); 
    }
    
    match /blog_posts/{postId} { 
      allow read: if true; 
      allow write: if isStaff(); 
    }
    
    match /search_trends/{docId} { 
      allow read: if true; 
      allow write: if true; 
    }
    
    // Configuración del sistema (incluye giftcard)
    match /configuracion/{docId} { 
      allow read: if true; // Lectura pública para giftcard
      allow write: if isStaff(); // Solo admin puede modificar
    }
    
    // Gift Cards (si usas colección separada)
    match /gift_cards/{cardId} { 
      allow read: if isSignedIn();
      allow update: if isStaff();
    }

    // --- 7. SOLICITUDES / OPORTUNIDADES ---
    match /solicitudes/{solicitudId} {
      // Leer: Permitir queries para usuarios logueados (el where filtrará en el cliente)
      // NOTA: resource.data solo funciona para get(), no para list/query
      allow read: if isSignedIn();
      
      // Crear: Cualquier usuario logueado puede crear solicitud
      allow create: if isSignedIn();
      
      // Actualizar: 
      // 1. El cliente que creó la solicitud
      // 2. Profesionales que están en la lista de candidatos
      // 3. Admin/Staff
      // 4. NUEVO: Cualquier profesional logueado puede SOLO actualizar contactadosPor/descartadosPor/presupuestadosPor/eliminadosPor
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.clienteId ||
        request.auth.uid in resource.data.candidatos ||
        isStaff() ||
        // Permitir que cualquier profesional actualice SOLO los arrays de contacto/descarte/presupuesto
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['contactadosPor', 'descartadosPor', 'presupuestadosPor', 'eliminadosPor']))
      );
      
      // Eliminar: Solo el cliente o admin
      allow delete: if isSignedIn() && (
        request.auth.uid == resource.data.clienteId ||
        isStaff()
      );
      
      // Subcolección de Propuestas (Presupuestos de profesionales)
      match /propuestas/{propuestaId} {
        // Leer: Cualquier usuario logueado puede ver propuestas
        allow read: if isSignedIn();
        
        // Crear: Cualquier profesional logueado puede crear propuesta
        allow create: if isSignedIn();
        
        // Actualizar: Solo el profesional que creó la propuesta o admin
        allow update: if isSignedIn() && (
          resource.data.proId == request.auth.uid ||
          isStaff()
        );
        
        // Eliminar: El profesional que la creó, el cliente dueño de la solicitud, o admin
        allow delete: if isSignedIn() && (
          resource.data.proId == request.auth.uid ||
          get(/databases/$(database)/documents/solicitudes/$(solicitudId)).data.clienteId == request.auth.uid ||
          isStaff()
        );
      }
    }

    // --- 8. CONTACTOS Y SEGURIDAD ---
    match /contactos/{contactoId} {
      // Permitir leer si el usuario es el cliente o el profesional
      allow read: if isSignedIn() && (
        resource.data.clienteId == request.auth.uid || 
        resource.data.proId == request.auth.uid
      );
      
      // Crear: Cualquier usuario puede crear (al contactar)
      allow create: if isSignedIn();
      
      // Actualizar: El profesional o Admin
      allow update: if isStaff() || (isSignedIn() && request.auth.uid == resource.data.proId);
      
      // Eliminar: Si soy participante
      allow delete: if isSignedIn() && (
        resource.data.clienteId == request.auth.uid || 
        resource.data.proId == request.auth.uid
      );
    }

    match /feedback_contactos/{feedbackId} {
      allow create: if true;
      allow read: if isStaff();
    }

    // --- 10. FAVORITOS ---
    match /favoritos/{userId} {
      allow read, write: if isOwner(userId);
    }

    // --- 9. NEWSLETTER ---
    match /newsletter/{subId} {
      allow create: if true;
      allow read, delete: if isStaff();
    }
    
    match /newsletter_campaigns/{campId} {
      allow read: if isStaff();
      allow create: if isStaff(); // Client side logic currently saves it
    }

    // --- ESTA LÍNEA DEBE ESTAR AL FINAL (Bloqueo por defecto) ---
    match /{document=**} { 
      allow read, write: if false; 
    }
  }
}
